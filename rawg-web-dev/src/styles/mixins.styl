$more-button-hover()
  background-color $color-white
  color $color-black

  .theme_light &
    background-color rgba(#151515, 10%)
    color rgba(#151515, 50%)

$more-button()
  $font16-medium()
  display flex
  flex 0 1 auto
  align-items center
  justify-content center
  width 200px
  height 48px
  background-color rgba($color-white, 0.1)
  color rgba($color-white, 0.4)
  border-radius 4px
  cursor pointer
  transition all 0.3s

  .theme_light &
    background-color rgba(#151515, 5%)
    color rgba(#151515, 40%)

  &:hover
    @media $bp.desktop
      $more-button-hover()

  @media $bp.phone
