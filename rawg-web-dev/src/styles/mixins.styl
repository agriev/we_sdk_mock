$hover-overall-lighting(brightnessValue = 1.6)
  @media $bp.desktop
    position absolute
    top 0
    left 0

    width 100%
    height 100%
    border-radius 6px

    transition opacity 0.2s ease-in
    opacity 0

    background rgba(255,255,255,0.05) no-repeat center/cover;

    filter brightness(brightnessValue)
    mask-image linear-gradient(to bottom, rgba(0, 0, 0, 0) 40%, rgba(0, 0, 0, 1) 100%)

$hover-overall-lighting-active()
  @media $bp.desktop
    opacity 1

// Позволяет создать кастомную полоску под текстом нужной ширины и на нужном расстоянии от текста
// через специальные CSS свойства background
$custom-underline(color, height, offset, hoverEffect = false)
  background-image linear-gradient(to top, alpha(color, 0) 0px+offset, color 0px+offset, color 0px+height+offset, alpha(color, 0) 0px+height+offset)
  if (hoverEffect)
    &:hover
      background-image linear-gradient(to top, alpha(color, 0) 0px+offset, alpha(color, .4) 0px+offset, alpha(color, .4) 0px+height+offset, alpha(color, 0) 0px+height+offset)

// Обрезает линию по высоте на определённое кол-во строк
// Взято отсюда: https://stackoverflow.com/a/13924997/2035123
$line-clamp(lines, height)
  overflow hidden
  text-overflow ellipsis
  display -webkit-box
  -webkit-box-orient vertical
  -webkit-line-clamp lines
  line-height height
  max-height height*2

$add-link-style(opacity = 0.4, color = $color-white)
  $custom-underline(rgba(color, opacity), 1, 0)

$remove-link-style()
  background-image none

