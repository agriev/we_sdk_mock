.rating-distribution
  @media $bp.phone
    padding 0 10px

.rating-distribution__stat
  display flex
  width 100%

  > div:first-child
    border-top-left-radius 4px
    border-bottom-left-radius 4px
  > div:last-child
    border-top-right-radius 4px
    border-bottom-right-radius 4px

.rating-distribution__stat-icon_empty
  margin-right 15px
  background url('~assets/icons/emoji/zzz.png') center / contain no-repeat
  width 36px
  height 36px

.rating-distribution__stat_empty
  margin-top 24px
  display flex
  width 100%
  background-color #7e8181
  border-radius 4px
  height 50px
  justify-content center
  align-items center
  font-size 20px
  font-weight bold
  position relative

  @media $bp.phone
    margin-top 12px

.rating-distribution__stat-item
  position relative
  height 50px
  overflow hidden
  cursor pointer
  &:hover
    box-shadow 0 0 10px 0 #ffffff
    // z-index 200
  &:active
    box-shadow none

.rating-distribution__stat-item_hover
  box-shadow 0 0 10px 0 #ffffff
  // z-index 200

.rating-distribution__stat-item-icon
  position absolute
  left -10px
  bottom -10px
  width 55px
  height 55px

.rating-distribution__stat-item_exceptional
    background-image linear-gradient(to bottom, #b4ec51, #429321)
    .rating-distribution__stat-item-icon
        width 65px
        height 65px
        bottom -16px
        left -14px
.rating-distribution__label-icon_exceptional
  background-image linear-gradient(to bottom, #b4ec51, #429321)
.rating-distribution__stat-item_recommended
    background-image linear-gradient(to top, #4354b9, #649bff)
    .rating-distribution__stat-item-icon
        width 50px
        height 50px
        bottom -10px
        left -16px
.rating-distribution__label-icon_recommended
  background-image linear-gradient(to top, #4354b9, #649bff)
.rating-distribution__stat-item_meh
    background-image linear-gradient(to bottom, #fad961, #f76b1c)
    .rating-distribution__stat-item-icon
        width 51px
        height 51px
        bottom -11px
        left -17px
.rating-distribution__label-icon_meh
  background-image linear-gradient(to bottom, #fad961, #f76b1c)
.rating-distribution__stat-item_skip
    background-image linear-gradient(to bottom, #ff5764, #f11a2a)
    .rating-distribution__stat-item-icon
        left -16px
        bottom -9px
        width 48px
        height 48px
.rating-distribution__label-icon_skip
  background-image linear-gradient(to bottom, #ff5764, #f11a2a)

.rating-distribution__meta
  margin-top 17px
  display flex

  @media $bp.phone
    margin-top 16px
    flex-direction column

.rating-distribution__labels
  display flex
  flex-wrap wrap
  // потому что внутренние элементы создают отступ вниз, а нам от него надо избавиться
  // margin-bottom -8px
  margin-left -16px

  @media $bp.phone
    margin-right 0
    margin-left 0

.rating-distribution__label
  display flex
  align-items center
  cursor pointer
  height 32px
  box-sizing border-box
  box-shadow 0px 0px 0px 2px rgba(255,255,255,0)
  padding 8px 12px
  border-radius 24.5px
  margin 0 4px
  @media $bp.phone
    padding 6px 10px
    margin-left -5px
    &:not(:last-child)
      margin-bottom 6px
      margin-right 8px

  &:hover
    box-shadow 0px 0px 0px 2px rgba(255,255,255,0.2)
    opacity 1
  &:active
    box-shadow 0px 0px 0px 2px rgba(255,255,255,0.4)

.rating-distribution__label_hover
  box-shadow 0px 0px 0px 2px rgba(255,255,255,0.2)
  opacity 1 !important


// .rating-distribution__label_disabled
//   opacity 0.4
.rating-distribution__label_opacity
  opacity 0.4 !important

.rating-distribution__label-icon
  margin-right 6px
  width 10px
  height 10px
  border-radius 50%

.rating-distribution__label-rating
  .rating__text
    font-weight bold

  .rating__icon
    margin-right 0
    margin-left 8px
    width 18px
    height 18px
    position relative
    top -1px

  .rating__icon_recommended
      margin-left 4px
  .rating__icon_meh
      margin-left 7px
  .rating__icon_skip
      margin-left 4px

.rating-distribution__label-count
  margin-left 8px
  font-size 14px
  color alpha($color-white, 0.4)

.rating-distribution__label-count_active
  color $color-white

.rating-distribution__label_active
  box-shadow 0px 0px 0px 2px rgba(255,255,255,0.4)
  opacity 1
