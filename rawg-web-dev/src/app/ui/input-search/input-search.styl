.input-search
  position relative
  margin-left auto
  margin-right auto

  width 100%
  padding-bottom 5px

  border-bottom 2px solid $color-white

  @media $bp.phone
    width calc(100% - 20px)

.input-search__icon
  position absolute
  top 10px
  left 0

  @media $bp.phone
    display none

.input-search__input
  width 100%
  height 50px
  padding 0 20px 0 50px
  box-sizing border-box
  border none

  background transparent
  color $color-white
  font-family inherit
  font-size 30px
  letter-spacing 0

  @media $bp.phone
    padding 0
    font-size 24px
