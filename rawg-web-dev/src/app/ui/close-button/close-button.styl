.close-button
  display flex
  justify-content center
  align-items center
  width 50px
  height 50px
  box-sizing border-box
  border 1px solid alpha(#979797, 0.05)
  border-radius 50%

  background-color alpha($color-white, 0.2)
  font-size 0
  line-height 0
  cursor pointer
  transition all 0.2s

  .close-button__icon-svg path
    transition all 0.2s

  &:hover
    background-color $color-white
    .close-button__icon-svg path
      fill $color-black

.close-button__icon svg
  width 18px
  height 19px

.close-button_small
  width 30px
  height 30px

.close-button_small .close-button__icon svg
  width 12px
  height 12px
