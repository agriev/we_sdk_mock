.game-card-video
  display flex
  align-items center
  justify-content center

  height 0
  padding-bottom 56.25%
  position relative

.game-card-video__video
  width 100%
  height auto
  object-fit cover

  position absolute
  top 0
  left 0
  width 100%
  height 100%

.game-card-video-preview
  background-position center
  background-size cover
  background-repeat no-repeat
  position absolute
  width 100%
  height 100%
  top 0
  left 0
  transition .3s opacity linear
  z-index 1

  &_button
    cursor pointer

  &::after
    content ''
    display block
    position absolute
    left 16px
    bottom 16px
    width 44px
    height 44px
    background-repeat no-repeat
    background-position center
    background-size contain
    background-image url('~assets/icons/play-with-round.svg?external')
    opacity 0
    transition opacity .3s linear

    background-color rgba(white, 0.1)
    border-radius 100%
    backdrop-filter blur(20px)

  &:not(.loading):not(.started)::after
    opacity 1

  .game-card-video.started &
    opacity 0
    pointer-events none

.game-card-video-loader
  display block
  position absolute
  width 100%
  height 0
  padding-bottom 30%
  top 50%
  transform translateY(-50%)
  left 0%
  z-index 2

  .loading-2__circular
    max-width 128px
