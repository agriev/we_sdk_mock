.input-comment
  position relative

.input-comment__form-wrapper
  @media $bp.phone
    display flex
    flex-direction column

.input-comment__form-wrapper button
  margin 10px auto 5px
  @media $bp.desktop
    max-width 300px

.input-comment__form
  display flex
  align-items center
  min-height 50px
  padding 5px
  box-sizing border-box

  border-radius 4px
  background-color alpha(white, 5%)

  .theme_light &
    background-color alpha(#151515, 5%)

.input-comment__avatar
  flex-grow 0
  flex-shrink 0
  margin-right 10px
  transition 0.3s

.input-comment__field
  flex-grow 1
  width 100%
  padding 12px 0
  box-sizing border-box
  border none
  resize none
  margin 0

  background transparent
  color $color-white
  font-family inherit
  font-size 14px

  .theme_light &
    color #151515

.input-comment__help-text
  position absolute
  right 0

  text-align right
  font-size 12px
  color alpha($color-white, 0.2)

  .theme_light &
    color alpha(#111, .4)

.input-comment__focus
  opacity 0.6
  transition 0.3s

  .theme_light &
    opacity 1

.input-comment_reply
  margin-left 53px

.input-comment_reply
  margin-left 10px

.input-comment_reply
.input-comment_reply-child
  margin-top 10px

.input-comment_reply-child .input-comment__avatar
  width 30px
  height 30px
  margin-top 5px
