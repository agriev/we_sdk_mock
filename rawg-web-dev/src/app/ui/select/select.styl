.select
  display block
  width 100%
  padding 0
  margin 0

.select__item
  display flex
  justify-content space-between
  align-items center
  width 100%
  height 30px
  padding 0 10px
  box-sizing border-box
  margin 0

  border-radius 4px
  list-style none
  cursor pointer

  &:hover
    background-color alpha($color-black, 0.1)

.select__item_clean
  color $error-color

.select__search
  padding 0 10px
  box-sizing border-box
  margin-bottom 15px

.select__input
  width 100%
  height 30px
  padding 0
  box-sizing border-box
  border none
  border-bottom 2px solid alpha($color-black, 0.1)

  color alpha($color-black, 0.3)
  font-family inherit
  font-size 16px
