.select-content
  display block
  width 100%
  padding 0
  margin 0

.select-content__title
  position relative
  z-index 1

  display flex
  align-items center
  padding 0 10px
  box-sizing border-box

  white-space nowrap
  font-size 16px
  color alpha($color-black, 0.5)

  @media $bp.desktop
    height 50px

  @media $bp.phone
    height 30px
    justify-content center

.select-content__item
  position relative

  display flex
  justify-content space-between
  align-items center
  width 100%
  height 30px
  padding 0 10px 0 10px
  box-sizing border-box
  margin 0

  border-radius 4px
  list-style none
  white-space nowrap
  cursor pointer

  @media $bp.phone
    padding 0 25px 0 25px

  transition background-color .3s

  &:hover
    color $color-black
    background-color alpha($color-black, 0.1)

.select-content__item_link
  margin-bottom 10px
  padding 0 0 0 10px

.select-content__item_link a
  $remove-link-style()
  color $color-black

  &:hover
    color $color-black

.select-content__item
  position relative

  &.select-content__item-back
    border-top 1px solid #ddd
    padding 20px
    div
      width 100%
      text-align center

  &.select-content__item-select-all
    border-top 1px solid #ddd
    padding 20px 20px 20px
    margin-top 10px
    div
      color #31a94b
      width 100%
      text-align center

  .select-content__item__main
    width 100%
    span
      display none
      width 100%
      height 20px
      line-height 20px
      overflow hidden
      white-space nowrap
      text-overflow ellipsis
      position relative
      &.select-content__item__main__desktop
        @media $bp.desktop
          display block
      &.select-content__item__main__phone
        @media $bp.phone
          display block
          text-align center
          max-width none

        &--with-check
          left 9px

  .select-content__item__childs
    border-radius 4px
    background-color $color-white
    box-shadow -1px 1px 5px alpha($color-black, 20%)
    padding 5px 7px

    @media $bp.phone
      display none

    @media $bp.desktop
      position absolute
      z-index 2
      left calc(100% - 20px)
      top -10px
      transition opacity .3s
      opacity 0
      pointer-events none
      ^[-1]:hover ^[-1..-1]
        opacity 1
        pointer-events auto

    .select-content__item__child
      padding 5px 25px 5px 5px
      background-color alpha($color-black, 0)
      transition background-color .3s
      border-radius 4px
      position relative

      &:hover
        background-color alpha($color-black, 0.1)

      &.select-content__item__child__select-all
        color #31a94b
        border-top 1px solid #dedede
        border-radius 0
        margin-top 3px
        padding 5px 25px 3px 5px
        &:hover
          background-color transparent

      .select-content__icon
        top 8px
        width 13px
        height 8px


.select-content__icon
  background url('~assets/icons/check.svg?external') no-repeat center / cover
  width 13px
  height 9px
  display inline-block
  margin-left 4px

.select-content__icon__has_childs
  background url('~assets/icons/arrow-right.svg?external') no-repeat center / contain
  filter brightness(70%)
  position absolute
  top 6px
  right 5px
  width 10px
  height 8px

  @media $bp.phone
    width 13px
    height 12px
    top 9px
    right 12px

.select-content__item_clean
  color $error-color
  border-bottom 1px solid rgba(0,0,0,0.1)
  border-bottom-left-radius 0
  border-bottom-right-radius 0
  padding-bottom 6px
  &:hover
    background-color transparent
  span
    color $error-color

.select-content__search
  padding 0 10px
  box-sizing border-box
  margin-bottom 15px

.select-content__input
  width 100%
  height 30px
  padding 0
  box-sizing border-box
  border none
  border-bottom 2px solid alpha($color-black, 0.1)

  color alpha($color-black, 0.8)
  font-family inherit
  font-size 16px

.select-content__disabled
  color gray
