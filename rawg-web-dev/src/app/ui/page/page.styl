@import "./page-secondary.styl"
@import "./page-error.styl"
@import "./page-static.styl"
@import "./page-docs.styl"

.page
  min-height 100vh
  box-sizing border-box
  padding-bottom 100px

  display flex
  flex-direction column

  @media $bp.phone
    padding-bottom 50px

.page__header
  z-index 10
  width 100%

  flex-grow 0

.page__content-wrap-centerer
  display flex
  flex-direction column
  align-items center

  width 100%

.page__content-wrap
  box-sizing border-box

  display flex
  flex-direction column
  width 100%

  max-width $page-width-phone

  @media $bp.desktop
    max-width 1920px

    // padding-left 256px + 32px + 8px
    padding-right 32px

    flex-direction row
    justify-content center

    align-items flex-start

.page__content-before
  display flex
  width 100%

  @media $bp.desktop
    display grid
    flex 1

.page__content
  box-sizing border-box
  display flex
  flex-direction column
  flex-grow 1
  width 100%

  margin-top 32px

  margin-left auto
  margin-right auto

  @media $bp.phone
    max-width $page-width-phone

  .game-edit &
    padding-top 48px

    @media $bp.phone
      padding-top 24px

.page__content_hidden
  flex-grow 0
  height 0
  overflow hidden

.page__art
  position absolute
  top 0
  left 0
  z-index -2

  width 100%
  height 100%

.page__loading
  display flex
  justify-content center
  align-items center
  flex-grow 1

  svg
    fill alpha($color-white, 0.1)

.page_footer
  padding-bottom 200px

  @media $bp.phone
    padding-bottom 100px
