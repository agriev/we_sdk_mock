.page_static
  line-height 1.4
  hyphens auto

  @media $bp.phone
    padding 0 10px

  .page__content
    padding-bottom 100px
    font-size 18px
    max-width $page-width-desktop

    h1
      margin 40px auto
      text-align left
      line-height 1.2em
      hyphens none

    h2
      padding-top 20px
      margin-bottom 20px
      line-height 1.2em
      hyphens none

    h3
      padding-top 16px
      margin-bottom 16px
      line-height 1.2em
      hyphens none

    p
      margin-bottom 20px

    ul
      margin-top 0
      @media $bp.phone
        padding-left 20px

    li
      margin-bottom 5px

    .page__notifications
      display none

    a
      cursor pointer

    ul > li > ul
      margin 15px 0 25px
      > li
        margin-bottom 15px

    @media $bp.phone
      margin-bottom 120px
