.collection-card-new
  position relative
  display flex
  flex-direction column
  align-items center
  width $column-width-1-1-desktop
  box-sizing border-box
  padding 24px 24px 32px 24px
  border-radius 6px
  background-size cover
  overflow hidden
  white-space normal

  @media $bp.phone
    width calc(100% - 22px)
    margin-left 11px

  &_float
    width 100%

    .collection-card-new__games
      max-width 270px
      margin 0 auto

.collection-card-new__games
  position relative
  display flex
  flex-wrap wrap
  justify-content center
  align-items baseline

  @media $bp.phone
    margin-bottom 16px

.collection-card-new__game-small
  width 42px
  height 28px
  border-radius 4px
  background alpha($color-white, 0.04) no-repeat center

  @media $bp.phone
    width 22px
    height 22px

.collection-card-new__game
  position relative
  background alpha($color-white, 0.04) no-repeat center
  background-size cover
  width 124px
  height 86px
  border-radius 6px

  @media $bp.phone
    width 67px
    height 46.6px

.collection-card-new__add-game
  width 180px
  height 120px

  @media $bp.phone
    width 100%
    height 65px

.collection-card-new__game_pair
.collection-card-new__game_single
  width 180px
  height 120px

  & + &
    margin-left 16px

  @media $bp.phone
    width 97.2px
    height 65px

.collection-card-new__game_center
  z-index 2
  width 180px
  height 120px
  margin-left -11px
  margin-right -11px

  @media $bp.phone
    width 97.2px
    height 65px

.collection-card-new__title-inline
  text-align left
  margin-right auto
  display flex
  width 100%

  @media $bp.phone
    display block
    width calc(100% - 65px)

.collection-card-new__author
  text-align center

  &_inline
    text-align left

.collection-card-new__private
  font-size 12px
  color alpha($color-white, 0.5)

.collection-card-new__count
  margin-top 5px
  font-size 12px
  color alpha($color-white, 0.4)
  text-transform uppercase
  letter-spacing 1px

  @media $bp.phone
    font-size 10px

.collection-card-new__link
  $font24-large()
  padding-top 9px
  padding-bottom 1px
  text-align center
  font-weight bold

  &_big
    $remove-link-style()
    width 100%

  @media $bp.phone
    font-size 18px
    font-weight bold

.collection-card-new_inline
  display flex
  width 100%
  padding 16px 0

  &:not(:last-child)
    border-bottom 1px solid alpha($color-white, 0.1)

.collection-card-new__plus-count
  display none

.collection-card-new__e3-2018-promo
  background-image url('~assets/icons/promos/e3-2018/e3-2018.svg?external')
  background-size contain
  background-repeat no-repeat
  position absolute
  top 16px
  right 16px
  z-index 1

  @media $bp.desktop
    width 48px
    height 24px

  @media $bp.phone
    width 32px
    height 16px

.collection-card-new__e3-2018-promo-inline
  background-image url('~assets/icons/promos/e3-2018/e3-2018.svg?external')
  background-size contain
  background-repeat no-repeat
  display inline-block
  width 28px
  height 14px
  margin-left 5px

.collection-card-new__gamescom-promo
  background-image url('~assets/icons/promos/gamescom/gamescom-icon.svg?external')
  background-size contain
  background-repeat no-repeat
  position absolute
  top 16px
  right 16px
  z-index 1

  @media $bp.desktop
    width 95px
    height 24px

  @media $bp.phone
    width 63px
    height 16px

.collection-card-new__gamescom-promo-inline
  background-image url('~assets/icons/promos/gamescom/gamescom-icon.svg?external')
  background-size contain
  background-repeat no-repeat
  display inline-block
  width 28px
  height 14px
  margin-left 5px

.collection-card-new__meta
  margin-bottom 20px
  margin-left 7px
  margin-right 7px
  padding 0 30px
  text-align center

.collection-card-new__meta-list
  display: flex
  font-size 12px
  justify-content center
  margin-top 19px

.collection-card-new__meta-list-item-container
  display flex
  align-items flex-start
  margin-left auto

.collection-card-new__meta-list-item
  padding 7px 16px

  & + &
    border-left 1px solid rgba(255,255,255,0.1)

  @media $bp.phone
    padding 4px 8px

    & div:first-child
      padding-left 0

.collection-card-new__meta-list-item-inline
  justify-content flex-end

  @media $bp.desktop
    text-align right

  @media $bp.phone
    margin-top 8px
    padding-left 0

  & .collection-card-new__meta-list-item__amount
    @media $bp.desktop
      justify-content flex-end

.collection-card-new__meta-list-item__icon
  margin-left 4px
  display inline-block

  background-repeat no-repeat
  background-position center
  background-size cover

  &_desktop_upvote
  &_desktop_downvote
    width 13px
    height 14px
  &_phone_upvote
  &_phone_downvote
    width 10px
    height 11px

  &_desktop_upvote
  &_phone_upvote
    background-image url("~assets/icons/up.svg?external")

  &_desktop_downvote
  &_phone_downvote
    background-image url("~assets/icons/down.svg?external")

  &_desktop_user
  &_phone_user
    width 12px
    height 15px
    background-image url("~assets/icons/user.svg?external")

.collection-card-new__meta-list-item__amount-positive
  color $color-lightgreen

.collection-card-new__meta-list-item__amount-negative
  color $color-lightred

.collection-card-new__meta-list-item__amount
  $font18-large()
  display flex
  flex 0 1 auto
  align-items center
  line-height 1.2

.collection-card-new__meta-list-item__description
  $font12-small()
  opacity 0.4

.collection-card-new__title
  transition color 0.3s
  color $color-white

  &:hover
    color alpha($color-white, 0.4)


.collection-card-new__author
  display flex
  justify-content center
  align-items center
  margin-top 5px
  $font12-small()
  color #ffffff

  &_inline
    justify-content start

.collection-card-new__author-container
  $remove-link-style()
  display flex
  align-items center
  color $color-white
  transition 0.3s

  span
    white-space nowrap
    overflow hidden
    text-overflow ellipsis
    max-width 100px

.collection-card-new__author__avatar
  margin-left 8px

.collection-card-new__author__avatar-inline
  top 2px
  position relative
  margin-left 0
  margin-right 8px

.collection-card-new__author__prefix
  color #868686
  margin 0 0.3em

.collection-card-new__author__collection-prefix
  color white

.collection-card-new__inline-container
  width 100%
  display flex
  padding 16px 0

  position relative
  z-index 0

  &:last-child
    padding-bottom 0

  @media $bp.phone
    flex-wrap wrap

  & a
    border-bottom none

  &:not(:last-child)
    border-bottom 1px solid alpha($color-white, 0.1)

.collection-card-new__title-link-inline
  $font24-large()
  $remove-link-style()
  display inline
  transition 0.3s
  color $color-white
  width 200px

  &:hover
    color alpha($color-white, 0.4)

  @media $bp.phone
    font-size 18px
    margin-bottom 2px

.collection-card-new__profile-link-inline
  color #868686
  font-size 12px
  min-height 20px
  display flex
  align-items flex-end
  a
    color white
    transition color .3s
    &:hover
      color rgba(255,255,255,0.4)
      .avatar
        opacity .4
    .avatar
      display inline-block
      margin-left 8px
      position relative
      top 5px
      transition opacity .3s

.collection-card-new__inline-images
  $remove-link-style()
  display flex
  flex-wrap wrap
  width 87px
  flex-shrink 0
  justify-content space-between
  margin-right 16px
  align-self: flex-start

  & > div:nth-child(-n+2)
    margin-bottom 3px

  @media $bp.phone
    width 47px

.collection-card-new__subtitle-inline
  font-size 12px
  color red
  color alpha($color-white, 0.4)
  font-weight normal
  line-height 2.33

.collections-card-new__meta-list-item__image
  margin-left 8px

.collection-card-new__inline__obscurer
  display none
  $obscurerMaskImage = linear-gradient(to bottom, rgba(32, 32, 32, 0) 0%, rgba(24, 24, 24, 0.99) 100%)
  @supports (mask-image: $obscurerMaskImage)
    display block
    position absolute
    top 0
    left 0
    width 100%
    height 100%
    background black
    mask-image $obscurerMaskImage
    z-index -1
    border-radius 4px

.collection-card-new__inline__background
  background-size cover
  opacity .3
  position absolute
  top 0
  left 0
  width 100%
  height 100%
  z-index -2
  border-radius 4px

.collection-card-new__game_float
  width 84.3px
  height 58.8px

  &.collection-card-new__game_center,
  &.collection-card-new__game_single
    width 122.4px
    height 82px

  &.collection-card-new__game_left
    position absolute
    bottom 0
    left 0

  &.collection-card-new__game_right
    position absolute
    bottom 0
    right 0

.collection-card-new__add-game_float
  width 160px
  height 108px
  margin 0 auto

.collection-card-new__button-follow
  margin-top 16px
  margin-bottom 0
