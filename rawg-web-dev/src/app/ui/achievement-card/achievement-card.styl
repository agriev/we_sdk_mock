.achievement-card
  display flex
  width 100%
  padding 16px 0

  &:last-child
    padding-bottom 0

  &:not(:last-child)
    border-bottom 1px solid alpha($color-white, 0.1)

.achievement-card__image
  flex-shrink 0
  width 56px
  height 56px
  border-radius 6px
  background alpha($color-white, 0.1) no-repeat center / cover

  @media $bp.phone
    width 48px
    height 48px

.achievement-card__meta
  margin-left 16px

.achievement-card__percent
  font-size 12px

.achievement-card__title
  margin-top 2px
  font-size 16px
  font-weight bold

  @media $bp.phone
    font-size 14px

.achievement-card__description
  margin-top 4px
  font-size 12px
  color alpha($color-white, 0.4)
