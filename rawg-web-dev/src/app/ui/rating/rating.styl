.rating
  position relative
  display inline-flex
  align-items center
  height 50px
  padding 0 12px
  box-sizing border-box
  border-radius 25px
  border 2px solid alpha($color-white, 0.1)
  transition all 0.3s

.rating__icon
  width 32px
  height 32px
  margin-right 15px
  background no-repeat center
  background-size contain
  position relative
  z-index 2

  &_skip
    background-image url("~assets/icons/emoji/skip.png")

  &_exceptional
    background-image url("~assets/icons/emoji/exceptional.png")

  &_meh
    background-image url("~assets/icons/emoji/meh.png")

  &_recommended
    background-image url("~assets/icons/emoji/recommended.png")

.rating__avatar
  margin-right 8px
  position relative
  z-index 1

.rating__text
  $font14-small()
  display flex
  align-items center

.rating__count
  position relative
  top -8px
  right -2px

  width 20px
  text-align left
  font-size 12px
  color alpha($color-white, 0.3)

.rating_hover:hover
  cursor pointer

  @media $bp.desktop
    background-color $color-white
    color $color-black
    border-color transparent

.rating_active
  background-color $color-white
  color $color-black
  border-color transparent

.rating_button
  @media $bp.phone
    height 36px
    border-radius 18px
    padding 0 12px

  .rating__icon
    margin-right 5px
    @media $bp.phone
      width 24px
      height 24px

  .rating__text
    @media $bp.phone
      font-size 12px

.rating_emoji
  padding 0
  border none
  border-radius 0

.rating_emoji .rating__icon
  margin 0
  width 100%
  height 100%

.rating_text
  padding 0
  flex-direction row-reverse
  height auto
  border none
  border-radius 0

  .rating__icon
    margin-right 0
    margin-left 15px
