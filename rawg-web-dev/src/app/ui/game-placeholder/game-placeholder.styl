.game-placeholder
  display flex
  width 100%
  height auto
  min-height 50px
  max-height 80px
  padding 16px 0

  &:not(:last-child)
    border-bottom 1px solid alpha($color-white, 0.1)

.game-placeholder__cover
  position relative
  display block
  flex-grow 0
  flex-shrink 0
  width 56px
  height 56px
  border-radius 4px
  margin-right 16px

  background-color alpha($color-white, 0.03)

  @media $bp.phone
    width 48px
    height 48px
    margin-right 12px

.game-placeholder__body
  flex-grow 1

.game-placeholder__title
  margin 4px 0 8px
  width 130px
  height 12px
  background-color alpha($color-white, 0.03)

.game-placeholder__platforms
  width 46px
  height 10px
  background-color alpha($color-white, 0.03)

.game-placeholder__button
  width 50px
  height 24px
  border-radius 4px
  background-color alpha($color-white, 0.03)
