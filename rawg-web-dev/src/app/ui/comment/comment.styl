.comment
  margin-bottom 20px
  position relative
  z-index 0

.comment__block
  display flex
  align-items top
  padding 0 5px

.comment__avatar-link
  flex-grow 0
  flex-shrink 0
  margin-right 10px
  border none

  &, .theme_light .page__content &
    $remove-link-style()

.comment__body
  display flex
  flex-grow 1
  flex-direction column

.comment__body-header
  display flex
  justify-content space-between
  align-items center

.comment__meta
  display flex
  align-items center
  margin-bottom 2px

.comment__user-link
  $remove-link-style()
  margin-right 10px
  border none
  font-size 14px
  color $color-white

.comment__date
  font-size 13px
  color alpha($color-white, 0.2)

  .theme_light &
    color alpha(black, .2)

.comment__text
  margin-bottom 5px
  font-size 14px
  font-weight 300
  line-height 1.38

  a
    display inline
    color $color-white
    transition all 0.3s
    border-bottom 1px solid $color-white

    &:hover
      border-color alpha($color-white, 0.4)
      color alpha($color-white, 0.4)

.comment__text-more
  display inline-block
  height 14px
  padding 0 5px
  border-radius 2px
  background-color $color-white
  font-size 12px
  line-height 1
  color $color-black
  cursor pointer
  transition background-color 0.3s

  &:hover
    background-color alpha($color-white, 0.5)

.comment__controls
  display flex
  justify-content space-between

.comment__reply
  display flex
  align-items center
  font-size 14px

.comment__reply-button
  margin-right 10px
  display inline-block
  cursor pointer
  transition color 0.3s

  &:hover
    color alpha($color-white, 0.5)
    .theme_light &
      color alpha(#111, 0.5)

.comment__reply-count
  display inline-flex
  cursor pointer
  transition color 0.3s

  &:hover
    color alpha($color-white, 0.5)
    .theme_light &
      color alpha(#111, 0.5)

.comment__reply-count-icon
.comment__reply-count-icon svg
  width 18px
  height 16px
  line-height 0

  .theme_light &
    path
      fill #111

.comment__reply-count-icon
  margin-right 5px

.comment__likes
  display flex
  align-items center

.comment__likes-count
  font-size 14px
  margin-right 5px

.comment__like
  cursor pointer

.comment__like-icon
  display inline-block
  margin-top 1px

.comment__like-icon svg path
  transition all 0.2s

  .theme_light &
    stroke #111

.comment__like:hover .comment__like-icon svg path
.comment__like-icon_active svg path
  fill #D63044
  stroke #D63044
  .theme_light &
    stroke #D63044

.comment_child
  margin-left 50px

.comment_child .comment__avatar
  width 30px
  height 30px

.comment__menu-button
.comment__menu-button.menu-button
  position relative
  width auto
  height auto
  font-size 14px
  color alpha(white, 0.4)
  transition color 0.3s

  &:hover
    color white

  .theme_light &
    color alpha(black, 0.4)
    &:hover
      color black

.comment__menu-content
  min-width 120px

.comment__menu-content-item
  display block
  padding 5px 10px

  border-radius 4px
  white-space nowrap
  cursor pointer
  color alpha($color-black, 0.5)

  &:not(.not-hover):hover
    background-color alpha($color-black, 0.1)

.comment__obscurer
  display none
  $obscurerMaskImage = linear-gradient(to bottom, rgba(32, 32, 32, 0) 0%, rgba(24, 24, 24, 0.99) 100%)
  @supports (mask-image: $obscurerMaskImage)
    display block
    position absolute
    top 0
    left 0
    width 100%
    height 100%
    background black
    mask-image $obscurerMaskImage
    z-index -1

.comment__background
  background-size cover
  opacity .3
  position absolute
  top 0
  left 0
  width 100%
  height 100%
  z-index -2
