.social-links
  display flex
  align-items center

  @media $bp.phone
    margin-bottom 24px
    width 100%
    justify-content center

.social-links__link
  $remove-link-style()
  display flex
  margin-left 16px
  align-items center
  color $color-white
  transition color 0.3s

  & span
    $add-link-style()

  @media $bp.phone
    margin 0 8px

.social-links__icon
  margin-right 8px
  line-height 0
  display inline-block

  &_fb
    background url("./fb.svg?external") no-repeat center / cover
    width 9px
    height 20px

  &_tw
    background url("./tw.svg?external") no-repeat center / cover
    width 22px
    height 18px

  &_discord
    background url("./discord.svg?external") no-repeat center / cover
    width 22px
    height 18px
