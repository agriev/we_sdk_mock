.view-all
  $remove-link-style()
  display flex
  padding 16px 24px 0px 24px

  &:hover
    .view-all__message
      opacity 0.4

    .view-all__block
      background $color-white
      color $color-black

      .view-all__block-message
        color $color-black
        transition all 0.3s

      .view-all__dots-icon-svg > g
        fill $color-black

  @media $bp.phone
    padding 16px 0

.view-all__block
  width 100px
  height 56px
  display flex
  flex-direction column
  align-items center
  justify-content center
  background-color rgba(#2c2c2c, 0.5)
  border-radius 4px
  flex-wrap wrap
  transition all 0.3s

  .view-all__dots-icon-svg > g
    fill alpha($color-white, 0.4)
    transition all 0.3s

.view-all__dots-icon
  display flex

.view-all__block-message
  text-align center
  $font14-paragraph()
  color rgba(255, 255, 255, 0.4)
  transition all 0.3s

.view-all__info-block
  display flex
  flex-direction column
  margin-left 14px
  margin-top 7px

.view-all__message
  $font16-medium()
  color: $color-white
  transition .3s

.view-all__count
  $font12-small()
  opacity 0.4
  margin-top 6px

.view-all_xs
  padding 0
  margin 0
  margin-top 12px
  width 304px

  .view-all__info-block
    margin-left 14px

  .view-all__message
    $font14-small()
    font-weight bold

  .view-all__block
    width 48px
    height 48px

  .view-all__count
    margin-top 4px

  .view-all__dots-icon
    margin 0

.view-all_m
  padding 0
  margin-left 24px
  margin-right 0

  .view-all__block-message
    $font12-small()
    margin-top 8px

  .view-all__block
    width 140px
    height 80px

  .view-all__dots-icon
    margin-bottom 8px

.view-all_l
  padding 0
  margin-left 24px
  margin-right 0
  flex-direction column

  .view-all__block
    width 222px
    height 125px

  .view-all__info-block
    margin-left 0

  .view-all__message
    $font18-large()
    margin-top 16px
    line-height 1.2
    font-weight bold

  .view-all__count
    $font14-small()
