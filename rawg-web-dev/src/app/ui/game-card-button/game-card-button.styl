.game-card-button
  $font12-small()
  display flex
  flex 0 1 auto
  align-items center
  justify-content center
  min-width 34px
  min-height 24px !important
  padding 0 8px
  color rgba(white, 0.4)
  line-height 12px
  border none
  border-radius 4px
  cursor pointer
  transition all 0.3s
  -moz-appearance none
  -webkit-appearance none

  &_light
    background-color rgba(white, 0.1)

  &_dark
    background-color rgba(#151515, 0.6)
    border 1px solid rgba(white, 0.14)

  svg, path, g
    fill white

  &_active
    background-color #55a229

  @media $bp.desktop
    &:hover
      background-color white
      color black

      svg, path, g
        fill black

      .game-card-button__arrow
        border-color rgba(black, 0.4)

  &_disabled
    cursor default

    @media $bp.desktop
      &:hover
        background-color rgba(white, 0.1)
        color rgba(white, 0.4)

        svg, path, g
          fill white

        .game-card-button__arrow
          border-color rgba(white, 0.4)

$sizes = 12 16 18 20
for size in $sizes
  .game-card-button__icon
    &_{size}
      width (size)px
      height (size)px

.game-card-button__icon
  &_with-offset
    margin-right 6px

  svg
    width 100%
    height 100%

.game-card-button__arrow
  display flex
  flex 0 1 auto
  align-items center
  justify-content center
  min-height 22px
  margin-left 6px
  padding-left 6px
  border-left 1px solid rgba(white, 0.4)

  svg
    fill rgba(white, 0.8)

.game-card-button__inner
  color white

  .game-card-button:hover &
    @media $bp.desktop
      color black
