.slick-slider
  position relative

  display block
  box-sizing border-box

  user-select none

  -webkit-touch-callout none
  -khtml-user-select none
  -ms-touch-action pan-y
  touch-action pan-y
  -webkit-tap-highlight-color transparent

.slick-slider *
  min-height 0
  min-width 0

.slick-list
  position relative

  display block
  overflow hidden

  margin 0
  padding 0

.slick-list:focus
  outline none

.slick-list.dragging
  cursor pointer
  cursor hand

.slick-slider .slick-track
.slick-slider .slick-list
  -webkit-transform translate3d(0, 0, 0)
  -moz-transform translate3d(0, 0, 0)
  -ms-transform translate3d(0, 0, 0)
  -o-transform translate3d(0, 0, 0)
  transform translate3d(0, 0, 0)


.slick-track
  position relative
  top 0
  left 0

  display flex

.slick-track:before,
.slick-track:after
  display table

  content ''

.slick-track:after
  clear both

.slick-loading .slick-track
  visibility hidden


.slick-slide
  display none
  float left

  height 100%
  min-height 1px

  flex 0 0 auto

[dir='rtl'] .slick-slide
  float right

.slick-slide img
  display block

.slick-slide.slick-loading img
  display none

.slick-slide.dragging img
  pointer-events none

.slick-initialized .slick-slide
  display block

.slick-loading .slick-slide
  visibility hidden

.slick-vertical .slick-slide
  display block
  height auto
  border 1px solid transparent

.slick-arrow.slick-hidden
  display none

.slick-dotted.slick-slider
  margin-bottom 30px

.slick-dots
  position absolute
  bottom -24px
  left 0

  display block

  width 100%
  padding 0
  margin 0

  list-style none

  text-align center

  @media $bp.phones
    bottom -14px

.slick-dots li
  position relative

  display inline-block
  margin 0 4px
  padding 0

  cursor pointer

.slick-dots li button
  font-size 0
  display block
  cursor pointer
  border 0
  outline none
  background transparent

.slick-dots li button:hover
.slick-dots li button:focus
  outline none

.slick-dots li button:hover
.slick-dots li button:focus
  opacity 1

.slick-dots li button
  width 10px
  height 10px
  padding 0
  border-radius 50%

  opacity .3
  background-color white
  transition opacity 0.3s

  @media $bp.phone
    width 8px
    height 8px

.slick-dots li.slick-active button
  opacity 1
  background-color $color-white


.slider
  width 100%
  overflow auto

  .slider__track
    display flex
    flex 0 1 auto
    flex-wrap nowrap
    width fit-content
    align-items flex-start
    margin-bottom 16px

.slider
.slider-slick
  .slick-list
    @media $bp.desktop
      margin -10px
      padding 10px

  &.expanded
    position relative
    z-index 10
    .slick-list, .slider
      height 1000px
      z-index 10
    .slick-list, .slick-slider
      pointer-events none
    .slick-track, .slider-arrow
      pointer-events auto
