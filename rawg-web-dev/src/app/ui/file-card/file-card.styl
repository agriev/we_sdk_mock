.file-card
  background-color #242424
  border-radius 12px
  margin-top 16px
  box-sizing border-box
  padding 24px

  @media $bp.desktop
    width 304px
    margin-left 22px

  @media $bp.phone
    width 100%

  .show-more-button
    flex 0 0 auto

.file-card__name-wrap
  text-align center
  margin 10px 0 40px

.file-card__name
  $font24-large()
  text-align center
  font-weight bold
  margin 16px auto 40px

.file-card__props
  width 100%

.file-card__props__prop
  $font12-small()
  display flex
  padding-bottom 12px

  & + &
    padding-top 12px
    border-top 1px solid alpha(#f2f2f2, 10%)

.file-card__props__prop__name
  flex 1 1 auto
  opacity .4

.file-card__description
  width 100%
  margin 8px 0

.file-card__props__prop__value
  text-align right
