.avatar
  display block
  width 40px
  height 40px
  border-radius 50%

  background transparent no-repeat center
  background-size cover

  display flex
  justify-content center
  align-items center

  position relative

  &.avatar_with-icon
    margin-right 25px

    background-image none
    .avatar__initials
      display none

  .SVGInline
    margin-left 32px
    transform translateY(1px)
    svg
      width 24px
      height 24px

  .avatar__initials
    color white
    font-weight bold
    font-size 14px
    line-height 1
    text-transform uppercase
    user-select none

    position absolute
    width 100%
    height 100%
    left 0
    top 0
    display flex
    align-items center
    justify-content center

.avatar_default-0
  background-image linear-gradient(to top, #4354b9, #649bff)

.avatar_default-1
  background-image linear-gradient(to top, #b1305c, #fd867d)

.avatar_default-2
  background-image linear-gradient(to top, #d73e3e, #fed12f)

.avatar_default-3
.avatar_default-4
  background-image linear-gradient(to top, #3023ae, #c86dd7)
