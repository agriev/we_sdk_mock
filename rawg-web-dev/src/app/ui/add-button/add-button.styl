.add-button
  display flex
  justify-content center
  align-items center
  width 50px
  height 50px
  box-sizing border-box
  border 1px solid alpha(#979797, 0.05)
  border-radius 50%

  background-color alpha($color-white, 0.05)
  font-size 50px
  font-weight 300
  font-family "sans-serif"
  cursor pointer
  transition all 0.2s

  path
    fill $color-white

.add-button_small
  width 30px
  height 30px

  font-size 30px
