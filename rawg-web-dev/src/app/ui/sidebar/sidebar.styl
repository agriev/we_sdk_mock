.sidebar
  position sticky
  top 8px

  padding-right 32px
  padding-left 8px

  height calc(100vh - 16px)
  box-sizing border-box

  &__root
    height 100%
    max-height 100%

    width 256px
    overflow-y auto

    background rgba(#222, 0.8)
    border-radius 12px

    box-sizing border-box
    border 1px solid rgba(white, 0.05)

  &__header
    box-sizing border-box
    padding 12px 10px

    background-color rgba(#222, 0.8)

    box-shadow 0 1px 0 rgba(white, 0.05)
    backdrop-filter blur(20px)

    position sticky
    top 0

    z-index 5

  &__section
    display flex
    flex-direction column

    box-sizing border-box
    padding 24px 16px
    color rgba(#feffff, 0.4)

    font-size 14px
    line-height 20px

    &-title
      font-size 24px
      line-height 28px
      color white

      margin-bottom 12px

    &-text
      padding 0
      color white

      font-size 14px
      line-height 20px

    &-login
      background-color white
      color #0f0f0f

      border none
      height 40px

      margin-top 16px
      cursor pointer
      border-radius 6px

      font-size 16px
      line-height 24px

      transition background-color 0.2s

      &:hover
        background-color #cdf500

    &-hits
      display grid
      grid-template-columns 1fr 1fr
      grid-gap 16px

    &-hit
      display flex
      flex-direction column

      background none

      font-size 14px
      line-height 22px

      color rgba(#feffff, 0.6)
      min-width 0

      img
        width 100%
        height 60px

        background-color rgba(#feffff, 0.05)
        box-shadow inset 0 0 0 1px rgba(white, 0.1)
        object-fit cover

        border-radius 6px

      span
        margin-top 8px

        white-space nowrap
        overflow hidden
        text-overflow ellipsis

      &:hover
        color white

    &--recent
      padding-left 0
      padding-right 0

      .sidebar__section-title
        padding-left 16px

    &:not(:last-child)
      border-bottom 1px solid rgba(#feffff, 0.05)

    &--login
      background-color rgba(#222, 0.8)
      backdrop-filter blur(20px)

      position sticky
      top 72px

      z-index 4

  &__recent-slider
    width 100%

    &-next,
    &-prev
      position absolute

      top (124px/2) - (64px/4)
      margin-top 4px

      z-index 2

      display flex
      align-items center
      justify-content center

      color white

      width 32px
      height 32px

      background-color rgba(#feffff, 0.1)
      border-radius 100%

      backdrop-filter blur(20px)
      transition background-color 0.2s, color 0.2s, opacity 0.2s

      cursor pointer

      &:hover
        background-color white
        color #0f0f0f

      .SVGInline
        display inline-flex

    &-next
      right 24px
      .SVGInline
        transform translateX(1px)

    &-prev
      left 24px
      .SVGInline
        transform translateX(-1px) rotate(180deg)

  &__recent-slide
    display flex
    flex-direction column

    background none
    padding 0 16px

    color rgba(#feffff, 0.6)
    margin-top 4px

    img
      width 100%
      height 124px

      cursor pointer

      background-color rgba(#feffff, 0.05)
      box-shadow inset 0 0 0 1px rgba(white, 0.1)
      object-fit cover

      border-radius 6px

    p
      margin 0
      padding 0

      white-space nowrap
      overflow hidden
      text-overflow ellipsis

      margin-top 8px
      font-size 16px
      line-height 24px

    &:hover
      color white

  .header-menu__section
    padding 24px 4px

  .header-menu__title
    padding-left 12px
    padding-right 24px

  .header-menu__section-child
    height 40px
    padding 0 12px

    border-radius 6px
    transition color 0.2s, background-color 0.2s

    &:hover
      background-color rgba(#feffff, 0.05)

    &.active
      background-color rgba(#feffff, 0.1)
      color white

      .SVGInline
        color #cdf500

  .header-menu__section-child + .header-menu__section-child
    margin-top 4px

