.button
  display block

  border none
  box-sizing border-box
  border-radius 4px
  background-color transparent

  font-family inherit
  cursor pointer
  -webkit-appearance none

  &, svg path
    transition background-color .3s, color .3s, border .3s, fill .3s, box-shadow .2s ease-out, opacity .2s ease-out

  &::focus
    border 0

.button_medium
  width 304px
  height 50px
  padding 0 20px

  font-size 18px
  box-shadow 0 0 20px 0 alpha($color-white, 0.2)

  &:hover
    box-shadow 0 0px 20px 0 alpha($color-white, 0.1)

  @media $bp.phone
    width 300px
    padding 0 16px
    font-size 16px

.button_small
  min-width 100px
  height 30px
  padding 0 8px

  font-size 12px
  font-weight 500
  opacity 1

  @media $bp.desktop
    &:hover
      opacity 0.8

.button_fill
  background-color $color-white
  color $color-black

  &.button_loading
    &, &:hover
      color white
      background-color alpha(white, 40%)

  @media $bp.desktop
    &:hover
      background-color lightness($color-white, 80%)

.button_fill-inline
  background-color $color-white
  color $color-black
  width 100%

.button_outline
  border 2px solid $color-white
  color $color-white

  svg
    fill alpha($color-white, 0.9)

  &:hover
    color lightness($color-white, 80%)
    border 2px solid alpha($color-white, .5)
    svg path
      fill alpha($color-white, .5)

.button[disabled]
  cursor default
  opacity 0.5

.button__additional
  margin-left 5px
  font-size 14px
  color alpha($color-black, 0.3)
