.input-search-main
  position relative
  max-width $page-width-desktop
  margin-left auto
  margin-right auto

  width 100%
  margin-top 5px
  height 60px

  border none
  &:hover
    .input-search-main__background:not(.input-search-main__background__focused)
      opacity 0.6

  @media $bp.phone
    padding-bottom 5px
    width: 100%
    height 50px
    margin-left 0
    margin-right 0

.input-search-main__background
  position: absolute
  top: 0px
  left: 0px
  width 100%
  height 60px
  border-radius 4px
  background rgba(255,255,255,0.1)
  transition all 0.3s

  @media $bp.phone
    height 50px

.input-search-main__background__focused
  opacity 1
  &:hover
    opacity 1

.input-search-main__background-with-dropdown
  border-bottom-left-radius: 0px;
  border-bottom-right-radius: 0px;

.input-search-main__icon
  background: url("~assets/icons/search.svg?external") no-repeat center / contain;
  width 31px
  height 31px

  position absolute
  right 24px
  top 14px

  @media $bp.phone
    right 15px
    top 13px
    width 25px
    height 25px

.input-search-main__input
  position: absolute
  top: 0px
  left: 0px
  width 100%
  height 60px
  padding 0 0 5px 34px
  box-sizing border-box
  border none

  background transparent
  color $color-white
  font-family inherit
  font-size 30px
  letter-spacing 0

  &::placeholder
    color $color-white
    opacity 1
  &:focus::placeholder
    color alpha($color-white, 50%)

  @media $bp.phone
    padding 0 0 10px 17px
    letter-spacing: 1px
    font-size 16px
