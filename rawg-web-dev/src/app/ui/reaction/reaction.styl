.reaction
  display inline-flex
  flex-grow 0
  align-items center
  height 40px
  padding 0 20px
  box-sizing border-box
  border-radius 20px

  background-color alpha($color-white, 0.05)
  font-size 10px
  letter-spacing 3px
  text-transform uppercase
  white-space nowrap
  transition all 0.3s

.reaction_hover:hover
  cursor pointer

  @media $bp.desktop
    background-color $color-white
    color $color-black

.reaction_active
  background-color $color-white
  color $color-black

.reaction_button
  @media $bp.phone
    height 28px
    padding 0 12px
    border-radius 14px
    font-size 9px
