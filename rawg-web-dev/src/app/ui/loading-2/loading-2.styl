$white = #FFFFFF;
$black = #151515;

$width = 50px;

.loading-2 {
  position: relative;
  margin: 0 auto;
  width: $width;
  &:before {
    content: '';
    display: block;
    padding-top: 100%;
  }
}

.loading-2__circular {
  animation: loading2-rotate 2s linear infinite;
  height: 100%;
  transform-origin: center center;
  width: 100%;
  position: absolute;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
  margin: auto;
  opacity: 0.4;
}

.loading-2__path {
  stroke-dasharray: 1, 200;
  stroke-dashoffset: 0;
  animation: loading2-dash 1.5s ease-in-out infinite;
  stroke-linecap: round;
  stroke: $white;

  .theme_light & {
    stroke: $black;
  }
}

@keyframes loading2-rotate {
  100% {
    transform: rotate(360deg);
  }
}

@keyframes loading2-dash {
  0% {
    stroke-dasharray: 1, 200;
    stroke-dashoffset: 0;
  }
  50% {
    stroke-dasharray: 89, 200;
    stroke-dashoffset: -35px;
  }
  100% {
    stroke-dasharray: 89, 200;
    stroke-dashoffset: -124px;
  }
}
