.profile-iframe
  box-sizing border-box
  position: fixed
  left: 0
  top: 0
  z-index: 999
  align-items: center
  display: flex
  flex-direction column
  justify-content: center
  background: rgba(black, 0.78)
  overflow-y: auto
  -webkit-overflow-scrolling: touch
  width: 100%;
  height: 100%;

  .profile-iframe__wrap
    min-height: 50vh;
    max-height: 100vh;

  .profile-iframe__head
    width: 488px;
    display flex
    justify-content flex-end
    padding-bottom 16px
    margin-top 16px

  iframe
    opacity: 0
    visibility: hidden
    transition: opacity 0.3s, visibility 0.3s

    border: none;

    height: 100%;
    width: 100%;

  &__loader
    position: absolute

    left: 50%
    top: 50%

    transform: translate(-50%, -50%)
    transition: opacity 0.3s, visibility 0.3s

  &_loaded
    .profile-iframe__loader
      opacity: 0
      visibility: hidden

    iframe
      opacity: 1
      visibility: visible
