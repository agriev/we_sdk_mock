.header-menu-phone
  display flex
  flex-wrap wrap

.header-menu-phone__games
  width 75%
  margin-bottom 20px

.header-menu-phone__icons
  width 25%
  display flex
  align-content flex-start
  flex-wrap wrap
  position relative
  top -8px
  left 18px

.header-menu-phone__browse
  width 100%
  margin-bottom 24px

.header-menu-phone__browse_guest
  margin-bottom 24px

  width 100%
  .header__browse-menu-phone__link
    width 100%

.header-menu__labeled-icon
  width 100%
  display flex
  flex-wrap wrap
  justify-content center
  cursor pointer

.header-menu__labeled-icon__icon-area
  background-color #151515
  width 48px
  height 48px
  border-radius 100%
  display flex
  justify-content center
  align-items center
  .header__add-game-icon
  .header__add-game-to-collection-icon
  .header__community-mobile-icon
  .header__feedback-mobile-icon
  .header__log-out-mobile-icon
  .header__log-in-mobile-icon
  .header__sign-up-mobile-icon
  .header__settings-mobile-icon
  .header__notifications-icon
    width 24px
    height 24px
    margin 0
  .header__notifications
    margin-right 0


.header-menu__labeled-icon__label
  font-size 12px
  opacity .4
  color #151515
  margin 4px 0 8px
  text-align center

.header-menu-phone__community_link
  display flex
  margin 14px 0 12px
  font-size 18px
  font-weight bold
  color #1c1c1c

  @media $bp.phone
    font-size 24px

.header-menu-phone__close-icon
  background url("~assets/icons/close-dark.svg?external") no-repeat center / contain
  width 24px
  height 24px
  margin 16px auto
