.header__notifications
  $remove-link-style()
  display flex
  margin-right 16px

  .header__notifications-icon
    &.withDot
      @media $bp.phone
        position relative
        left 6px

  .header__notifications__dot_red
    width 8px
    height 8px
    position relative
    top -6px
    left -2px
    background-image linear-gradient(to bottom, #ff5764, #f11a2a)
    border-radius 100%
    @media $bp.phone
      width 12px
      height 12px
      top -18px
      left 12px
