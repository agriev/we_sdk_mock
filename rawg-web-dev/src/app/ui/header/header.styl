    border-radius 12px
    padding 12px
    box-sizing border-box

    margin-bottom 44px + 8px

    &-nav a
      font-size 16px
      line-height 24px

      background none
      margin-right 32px
      color rgba(#feffff, 0.6)

      transition color 0.2s

      &:hover
        color white

      &.active
        color white

    &-search
      position relative
      display flex

      max-width 400px
      width 100%

      margin-right 40px

      &-dropdown
        position absolute !important
        display flex
        flex-direction column

        top 100%
        left 0

        min-height 184px
        max-height 488px

        margin-top 8px
        border-radius 12px
        width 100%

        background-color #222
        box-shadow inset 0 0 0 1px rgba(white, 0.05)

        z-index 69

    &-profile
      position relative

      &-body
        display flex
        align-items center

        cursor pointer

        color rgba(#feffff, 0.4)
        transition color 0.2s

        &:hover
          color white

      &-avatar img
        width 40px
        height 40px
        border-radius 100%

        background-color rgba(#feffff, 0.05)
        box-shadow inset 0 0 0 1px rgba(white, 0.1)
        object-fit cover

        user-select none

      .SVGInline
        display inline-flex
        margin-left 8px

      &--active &-body
        color white

      &-dropdown
        position absolute
        width 288px

        top 100%
        right -16px

        z-index 143

        margin-top 8px

        .header-profile__root
          border-radius 12px

          background-color #222
          box-shadow inset 0 0 0 1px rgba(white, 0.05)

        .header-profile__menu
          padding 12px 8px

        .header-profile__entry,
        .header-profile__entry--exit
          height 40px

        .header-profile__entry
          border-radius 6px
          transition background-color 0.2s, color 0.2s

          &:hover
            background-color rgba(#feffff, 0.05)
            color white

          &--active
            background-color rgba(#feffff, 0.1)
            color white

            .SVGInline
              color #cdf500

        .header-profile__entry + .header-profile__entry
          margin-top 4px

        .header-profile__footer
          height unset
          padding 12px 8px 8px 8px

