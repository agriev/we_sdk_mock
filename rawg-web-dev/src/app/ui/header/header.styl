.header-menu-floatable
  position fixed

  right 0
  bottom 0

  cursor pointer
  z-index 140

  width 64px
  height 64px

  background-color rgba(#222, 0.8)
  color white

  box-shadow inset 0 0 0 1px rgba(white, 0.05)
  backdrop-filter blur(20px)
  border-radius 12px

  // transition background-color 0.2s, box-shadow 0.2s, border-radius 0.2s, width 0.2s, height 0.2s, transform 0.2s
  transform translate(-12px, -12px)

  transform-origin center center

  .SVGInline
    display inline-flex
    position absolute

    left 50%
    top 50%

    transform translate(-50%, -50%)
    // transition transform 0.2s, opacity 0.2s

    &:nth-child(2),
    &:nth-child(3)
      transform translate(-50%, -50%) scale(0.2)
      opacity 0

  &--active
    border-radius 8px
    box-shadow none

    background-color rgba(#feffff, 0.1)
    transform translate(-20px, -20px)

    height 48px
    width 48px

    z-index 144

    .SVGInline:nth-child(1)
      transform translate(-50%, -50%) scale(0.2)
      opacity 0

    .SVGInline:nth-child(2)
      transform translate(-50%, -50%) scale(1)
      opacity 1

  &--back
    .SVGInline:nth-child(1),
    .SVGInline:nth-child(2)
      transform translate(-50%, -50%) scale(0.2)
      opacity 0

    .SVGInline:nth-child(3)
      transform translate(-50%, -50%) scale(1)
      opacity 1

