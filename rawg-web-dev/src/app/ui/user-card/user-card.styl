.user-card
  position relative

  width $column-width-1-1-1-1-desktop
  height 110px
  padding 25px
  box-sizing border-box

  border-radius 4px
  background-color alpha($color-black, 0.3)
  transition background-color 0.3s

  @media $bp.desktop
    &:hover
      background-color alpha($color-black, 0.2)

  @media $bp.phone
    width 280px
    height 70px
    padding 15px


.user-card__info
  display flex
  justify-content flex-start
  align-items center

  @media $bp.phone
    align-items flex-start

.user-card__wrap
  align-self center

.user-card__avatar
  margin-right 15px
  flex-shrink 0

.user-card__name
  width 110px
  overflow hidden
  white-space nowrap
  text-overflow ellipsis
  font-size 16px
  font-weight 700
  cursor pointer

.user-card__meta
  display flex
  align-items center
  padding-top 8px
  opacity 0.5

.user-card__meta-counter
  display flex
  align-items center
  flex-shrink 0
  font-size 10px
  text-align left
  & + &
    margin-left 15px
  span
    margin-right 5px

.user-card__games_icon
  path
    fill #ffffff

.user-card__link
  $remove-link-style()
  position absolute
  top 0
  left 0
  z-index 1

  width 100%
  height 100%
  border none
