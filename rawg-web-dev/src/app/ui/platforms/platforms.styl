.platforms
  display inline-flex
  align-items center
  justify-content center

  &.platforms__selectable
    .platforms__platform
      opacity 0.4
    .platforms__platform_selected
      opacity 1

.platforms__platform
  line-height 0
  transition opacity .3s

  background-repeat no-repeat
  background-position center
  background-size contain

  &_web
    background-image url("~assets/icons/platforms-icons/web.svg?external")
    .theme_light &
      background-image url("~assets/icons/platforms-icons/black/web.svg?external")
  &_web&_big
    width 16px
    height 16px
  &_web&_medium
    width 12px
    height 13px
  &_web&_small
