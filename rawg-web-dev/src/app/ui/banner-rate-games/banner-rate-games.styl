.banner-rate-games
  background linear-gradient(to bottom, #fd867d, #b1305c)
  display flex
  align-items center
  padding 16px 16px 16px 32px
  margin 32px 0px 40px 0px
  border-radius 6px
  position relative
  box-sizing border-box
  width 100%

  @media $bp.phone
    margin 20px 0px 40px 0px
    padding 24px
    flex-direction column

    .page.profile &
      margin-left 10px
      width calc(100% - 20px)

  .banner-rate-games__text
    $font20-large()
    flex 1 1 auto
    margin-right 10px
    font-weight bold

    @media $bp.phone
      $font16-medium()
      margin-bottom 16px
      margin-right 20px
      font-weight bold

    strong
      margin-left .2em

  .banner-rate-games__link
    $remove-link-style()
    display flex
    align-items center
    justify-content center
    padding 12px 32px
    text-align center
    color white
    border-radius 4px
    background-color alpha($color-white, 10%)
    transition background-color .3s, color .3s

    &:hover
      background-color alpha($color-white, 100%)
      color black

    @media $bp.phone
      width 100%
      max-width unset

  .banner-rate-games__close-button
    margin-left 16px
    flex 0 0 24px
    width 24px
    height 24px

    @media $bp.phone
      position absolute
      right 8px
      top 8px

    .close-button__icon svg
       width 10px
       height 10px

  .banner-rate-games__grow-container
    flex 0 0 auto
    display flex
    @media $bp.phone
      width 100%
