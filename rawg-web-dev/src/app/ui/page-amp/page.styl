@import "./page-secondary.styl"
@import "./page-error.styl"
@import "./page-static.styl"
@import "./page-docs.styl"

.page
  position relative

  display flex
  flex-direction column
  align-items center
  min-height 100%
  box-sizing border-box
  padding-bottom 100px

  @media $bp.phone
    padding-bottom 50px

.page__header
  display block
  width 100%
  flex-grow 0

.page__content
  display flex
  flex-direction column
  flex-grow 1
  width 100%

  @media $bp.desktop
    max-width $page-width-desktop

  @media $bp.phone
    max-width $page-width-phone

.page__content_hidden
  flex-grow 0
  height 0
  overflow hidden

.page__art
  position absolute
  top 0
  left 0
  z-index -2

  width 100%
  height 100%

.page__loading
  display flex
  justify-content center
  align-items center
  flex-grow 1

  svg
    fill alpha($color-white, 0.1)

.page_footer
  padding-bottom 200px

  @media $bp.phone
    padding-bottom 100px
