.select-category
  margin 0
  padding 0
  background-color white
  list-style none
  border-radius 6px
  overflow hidden

.select-category__item
  &:not(:last-child)
    border-bottom solid 1px rgba(#151515, 0.1)

.select-category__button
  display flex
  flex 0 1 auto
  justify-content flex-start
  align-items center
  padding 6px 24px 12px 16px
  cursor pointer
  transition all 0.3s

  > *
    flex 0 1 auto

  &:hover
    background-color #f3f3f3
    transition all 0.3s

  &_active
    .select-category__title
      font-weight bold

.select-category__button_remove
  padding 12px 12px 12px 48px
  color #fc4b37

.select-category__icon
  align-self flex-start

.select-category__text
  $font14-small()
  margin-left 8px
  padding-top 4px
  color rgba(black, 0.4)

.select-category__title
  display flex
  flex 0 1 auto
  color black

.select-category__description
  font-size 12px

.select-category__active
  margin-left 4px
