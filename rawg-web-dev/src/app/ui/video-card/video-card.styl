.video-card
  flex-shrink 0
  cursor pointer

  &:hover
    .video-card__title
      color alpha($color-white, 0.4)
    .video-card__preview__hover
      $hover-overall-lighting-active()

.video-card__preview-youtube
  display: none
  background url('~assets/icons/youtube-logo.svg?external') no-repeat center / cover

.video-card__preview
  position: relative
  display flex
  justify-content center
  align-items center
  flex-shrink 0
  width 100%
  border-radius 4px
  background alpha($color-white, 0.1) no-repeat center / cover

  .video-card__preview__hover
    $hover-overall-lighting()

.video-card__preview-icon
  line-height 0
  background url('~assets/icons/youtubePlay.svg?external') no-repeat center / cover

.video-card__title
  font-size 18px
  font-weight bold
  line-height 1.2
  transition color 0.3s

.video-card__channel
  margin-top 8px
  display flex
  align-items center
  font-size 12px
  color alpha($color-white, 0.4)

.video-card__channel-live
  margin-right 7px
  color $color-white
  span
    width 7px
    height 7px
    border-radius 50%
    display inline-block
    background-color #e91a23
    margin-right 1px

.video-card__channel-date
  flex-shrink 0

.video-card__channel-separator
  margin 0 4px
  font-size 6px

.video-card_block
  width 304px

  @media $bp.phone
    width 100%

  &.video-card_huge
    width 631px
    @media $bp.phone
      width 100%

    .video-card__preview
      height 355px
      border-radius 8px
      @media $bp.phone
        height 168px
        border-radius 4px

    .video-card__preview-icon
      width 51px
      height 51px

    .video-card__meta
      @media $bp.phone
        margin-top: 8px

    .video-card__title
      font-size: 35px
      letter-spacing: 2.2px;
      font-weight: normal
      @media $bp.phone
        font-size: 17px
        letter-spacing: 1px;
        font-weight bold

    .video-card__channel-title
      font-size 14px
      @media $bp.phone
        font-size: 12px

    .video-card__preview-youtube
      display: block
      position: absolute
      bottom: 13px
      right: 16px
      width: 105px
      height: 23px
      opacity: .8
      @media $bp.phone
        display: none

  &.video-card_big
    .video-card__preview
      height 170px

    .video-card__preview-icon
      width 81px
      height 81px

  &.video-card_medium
    .video-card__preview
      @media $bp.desktop
        height 125px
      @media $bp.phone
        height 150px

    .video-card__preview-icon
      width 79px
      height 79px

  .video-card__meta
    margin-top 16px
    @media $bp.phone
      margin-top 8px

.video-card_inline
  padding 16px 0
  display flex
  width 100%

  &:last-child
    padding-bottom 0

  &:not(:last-child)
    border-bottom 1px solid alpha($color-white, 0.1)

  .video-card__preview
    width 100px
    height 56px

  .video-card__preview-icon
    width 51px
    height 51px

  .video-card__title
    font-size 16px

    @media $bp.phone
      font-size 14px

  .video-card__meta
    margin-left 14px

  .video-card__channel
    margin-top 4px

.video-card__popup
  position fixed
  top 0
  right 0
  bottom 0
  left 0

  background alpha($color-black, 0.95)
  cursor default

.video-card__video-wrapper
  position absolute
  top 50%
  left 50%
  transform translate3d(-50%, -50%, 0)

  width 95%
  max-width 640px
  background alpha($color-white, 0.1)

.video-card__video
  position relative
  width 100%
  height 0
  padding-bottom 56.25%

  iframe
    position absolute
    top 0
    right 0
    bottom 0
    left 0
    width 100%
    height 100%
    border none

.video-card__close
  position absolute
  top 20px
  right 20px
  z-index 5
