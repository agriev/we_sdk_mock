.menu-button
  display flex
  justify-content center
  align-items center

  color $color-white
  cursor pointer

  .theme_light &
    color #444

.menu-button_inline
  position absolute
  top 0
  right 0

  width 40px
  height 30px

.menu-button_outline
  width 50px
  height 50px
  box-sizing border-box
  border 1px solid alpha(#979797, 0.05)
  border-radius 50%

  background-color alpha($color-white, 0.05)
  line-height 0
  transition all 0.2s

  &:hover
    background-color $color-white
    color $color-black
