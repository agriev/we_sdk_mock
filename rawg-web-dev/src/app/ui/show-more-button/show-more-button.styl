.show-more-button
  position relative
  width 100%
  margin 16px 0
  cursor pointer

  border-radius 8px
  background-color alpha(white, 7%)

  $remove-link-style()
  $font14-small()

  display flex
  align-items center
  justify-content flex-start

  width 100%
  box-sizing border-box
  margin 16px 0
  padding 12px 16px

  transition color .3s

  &:hover
    color #fad860

.show-more-button__title
  position relative
  line-height 14px
  flex 1 1 auto

.show-more-button__icon
  opacity .2
  display block
  width 12px
  height 18px
  margin-left 6px

  background-size contain
  background-position center
  background-repeat no-repeat
  background-image url('~assets/icons/arrow.svg?external')

  &.gray
    background-image url('~assets/icons/arrow-black.svg?external')
