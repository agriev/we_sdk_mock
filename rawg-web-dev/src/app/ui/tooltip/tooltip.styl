.tooltip
  position absolute
  bottom 100%
  left 50%
  transform translateX(-50%)
  margin-bottom 12px

  padding 10px 12px
  border-radius 4px
  background-image linear-gradient(to bottom, #4354ba, #649bff)
  font-size 16px
  font-weight bold
  pointer-events none

  &::after
    position absolute
    top 100%
    left 50%
    margin-left -3px
    border-width 3px
    border-style solid
    border-color #649bff transparent transparent transparent
    content ''
