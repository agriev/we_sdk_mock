.discover-sharing__icon
  display block
  width 22px
  height 20px

  svg
    color white
    width 100%
    height 100%
    transition all 0.3s

.discover-sharing__button
  display flex
  flex 0 1 auto
  justify-content center
  align-items center
  width 50px
  height 50px
  padding 0
  background-color rgba(white, 0.1)
  border-radius 4px
  border none
  cursor pointer
  transition all 0.3s
  -webkit-font-smoothing antialiased

  &:hover
    background-color white
    transition all 0.3s

    svg
      color black
      transition all 0.3s


.discover-sharing__content
  min-width 120px
  padding 10px

.discover-sharing__item
  padding 5px 10px
  cursor pointer
