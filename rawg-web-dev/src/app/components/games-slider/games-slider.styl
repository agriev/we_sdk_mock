.games-slider
  display flex
  flex-direction column
  overflow hidden

  width 100%
  background-color rgba(#feffff, 0.05)

  padding-top 32px
  margin-bottom 48px

  opacity 0
  visibility hidden

  transform scale(0.8)
  transition opacity 0.3s, visibility 0.3s, transform 0.3s

  position relative

  &__ready
    transform scale(1)
    opacity 1
    visibility visible

  @media $bp.desktop
    padding-top 0
    margin-top 48px
    margin-bottom 0

    background-color unset
    border-radius 12px

  .swiper
    width 100%

    @media $bp.desktop
      border-radius 12px
      margin-bottom 12px

  .swiper-slide
    background-image none
    cursor pointer
    position relative

    @media $bp.desktop
      overflow hidden
      height 320px
      border-radius 12px

      &:before
        content ''
        position absolute

        width 100%
        height 100%

        left 0
        top 0

        background-color rgba(black, 0.4)
        transition opacity 0.3s, visibility 0.3s

        z-index 1

  &__image
    display block
    background-color black
    color black
    width 100%
    object-fit cover

    border-radius 12px
    height 218px

    @media $bp.desktop
      position absolute
      height 100%

  &__info
    box-sizing border-box

    padding-top 12px
    padding-bottom 24px

    transition opacity 0.3s, visibility 0.3s, background 0.3s

    @media $bp.desktop
      position absolute
      padding 16px 20px 20px 20px

      bottom 4px
      left 4px

      width calc(100% - 8px)
      background-color rgba(14, 14, 14, 0.7)
      border-radius 10px
      backdrop-filter blur(20px)

      opacity 0

  &__title
    font-size 24px
    line-height 28px
    font-weight 600

    color white
    margin-bottom 4px

    transition color 0.3s

    @media $bp.desktop
      font-size 32px
      line-height 32px

      margin-bottom 12px

  &__description
    display flex
    flex-direction column

    font-size 14px
    line-height 20px

    color rgba(white, 0.6)
    width 80%

    p
      flex 1

      display -webkit-box
      -webkit-line-clamp 2
      -webkit-box-orient vertical
      overflow hidden

      margin-bottom 12px
      box-sizing border-box

      @media $bp.desktop
        padding-right 40px
        margin-bottom 0

    @media $bp.desktop
      width 100%
      flex-direction row
      justify-content flex-end

      font-size 16px
      line-height 24px

  &__play
    display inline-flex
    align-items center
    justify-content center

    border-radius 6px
    color black

    font-size 14px
    line-height 24px

    background-color: #CDF500
    height 40px

    padding 0 24px
    transition color 0.3s, background-color 0.3s

  .swiper-slide:hover
    .games-slider__play
      background-color white

    .games-slider__title
      color #cdf500

    .games-slider__description
      color rgba(white, 0.6)

    @media $bp.desktop
      .games-slider__info
        background-color rgba(14, 14, 14, 0.8)

  .swiper-pagination
    display inline-flex
    align-items center
    justify-content center

    bottom 0
    left 0

    position static
    width auto

    padding 0 24px

    @media $bp.phone
      padding 0 12px
      width 100%

    &-bullet
      max-width 48px
      width 48px
      height 4px
      border-radius 8px
      background-color rgba(white, 0.16)

      position relative
      opacity 1

      transition background-color 0.3s

      &:hover
        background-color rgba(white, 0.32)

      &-active:hover
        cursor default
        background-color rgba(white, 0.16)

      &-active::before
        content ''
        position absolute

        left 0
        top 0

        background-color white

        border-radius inherit
        height inherit

        width var(--data-progress)

      @media $bp.phone
        width 100%

  .swiper-button-next,
  .swiper-button-prev
    @media $bp.desktop
      display flex

    display none
    position absolute
    flex-shrink 0

    opacity 0
    visibility hidden

    margin 0
    z-index 101

    width 44px
    height 44px

    border-radius 100%
    background-color rgba(white, 0.1)
    backdrop-filter blur(20px)

    top calc(50%-22px)

    color white
    transition color 0.3s, background-color 0.3s, opacity 0.3s, visibility 0.3s

    &:after
      content unset

    &:hover
      background-color white
      color black

    .SVGInline
      display inline-flex
      position relative

  .swiper-button-prev .SVGInline
    transform rotate(180deg) translateX(1px)

  .swiper-button-next .SVGInline
    transform translateX(1px)

  .swiper-button-next
    right 24px

  .swiper-button-prev
    left 24px

  &__footer
    display inline-flex
    align-items center
    height 44px
    margin 0 auto

    @media $bp.phone
      height 18px
      padding-bottom 32px
      width 100%

  .swiper-slide-active:before
    opacity 0
    visibility hidden

  .swiper-slide-active &__info
    opacity 1
    visibility visible

  .swiper-slide__body
    position relative
    display flex

    width 100%
    height 100%

    &:hover
      color white

  &__inline
    width 100%
    background-color unset

    margin-top 0
    margin-bottom 0

  .swiper:hover
    .swiper-button-next,
    .swiper-button-prev
      opacity 1
      visibility visible

  .swiper-slide
    display flex

    @media $bp.phone
      > a
        background-image none
        padding 0 12px


.games-slider__inline
  .games-slider__image
    height 200px
