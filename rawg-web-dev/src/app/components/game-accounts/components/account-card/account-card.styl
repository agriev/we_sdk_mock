.account-card
  background-color alpha($color-white, 0.06)
  border-radius 6px

.account-card_default
  display flex
  flex-direction column
  align-items center
  text-align center
  padding 32px
  position relative

  @media $bp.phone
    padding 24px
    display grid
    grid-template-columns 65px 1fr
    grid-template-rows auto 1fr
    grid-column-gap 16px

  .account-card__name
    font-size 24px
    font-weight bold
    line-height 1.17
    letter-spacing 0.2px
    text-align center
    margin-bottom 8px

    @media $bp.phone
      width 160px
      grid-column 2
      grid-row 1
      font-size 18px
      line-height 1.22
      text-align left
      font-weight normal
      margin-bottom 4px

  .account-card__icon
    margin-bottom 16px

    @media $bp.phone
      margin-bottom 16px
      grid-column 1
      grid-row span 2
      align-self start


  .account-card__icon-svg
    width auto
    height 128px

    path
      opacity 1
      fill $color-white
    g
      opacity 1

    @media $bp.phone
      height 65px
      width 65px

  .account-card__connected
    width 36px
    height 36px
    border-radius 50%
    background url('~assets/icons/check-bold.svg?external') center / 25px no-repeat, linear-gradient(to bottom, #b4ec51, #429321)
    position absolute
    top 16px
    right 16px

    @media $bp.phone
      width 24px
      height 24px
      background url('~assets/icons/check-bold.svg?external') center / 15px no-repeat, linear-gradient(to bottom, #b4ec51, #429321)

  .account-card__error
    background linear-gradient(to bottom, #f5515f, #9f041b)

    &::before
      content '!'
      font-size 29px
      font-weight bold

      @media $bp.phone
        font-size 20px

.account-card_large
  position relative
  width 798px
  height 365px
  box-sizing border-box
  padding 42px 80px
  overflow hidden

  @media $bp.phone
    display flex
    flex 0 1 auto
    flex-direction column
    width 100%
    max-width 273px
    padding 24px

  &.account-card_psn
    background-image linear-gradient(to bottom, #444444, black)

  &.account-card_xbox
    background-image linear-gradient(to bottom, #b4ec51, #429321)

  &.account-card_steam
    background-image linear-gradient(to bottom, #497eac, #121a28)

  .account-card__name
    $heading-card()
    margin-bottom 16px
    text-align center

  .status-block, .account-card__description
    $font14-paragraph()
    margin-bottom 24px
    text-align center
    white-space pre-wrap

  .connect-button
    max-width 240px

    @media $bp.desktop
      margin 0 auto

  .account-card__icon
    position absolute

    svg
      opacity 0.2

    &_steam, &_xbox
      bottom -70px
      right -50px
      @media $bp.phone
        bottom -20px
        right -26px

      svg
        width 300px
        height 300px
        @media $bp.phone
          width 150px
          height 150px

    &_psn
      bottom -30px
      right -90px
      @media $bp.phone
        bottom -20px
        right -50px

      svg
        width 350px
        height 260px
        @media $bp.phone
          width 200px
          height 150px

  .account-card__hide-button
    display flex
    flex 0 1 auto
    justify-content center
    align-items center
    margin-top 16px

    @media $bp.phone
      margin-top 8px

    & > span
      $font14-paragraph()
      $add-link-style()
      letter-spacing 0.1px
      cursor pointer
