  background-image url('~assets/icons/platforms-bg-right/playstation.svg?external'), linear-gradient(to bottom, alpha(#434343, 0.8), alpha(#000, 0.8))
  background-position: bottom right
  background-repeat no-repeat
  background-size 33%, 100%
.event-container__platform-mac
  background-image url('~assets/icons/platforms-bg-right/mac.svg?external')
  background-position: bottom right
  background-repeat no-repeat
  background-size 33%, 100%
.event-container__platform-xbox
