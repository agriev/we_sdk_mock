  background-repeat no-repeat
  background-size 33%, 100%
.event-container__platform-sega
  background-image url('~assets/icons/platforms-bg-right/sega.svg?external'), linear-gradient(to bottom,alpha(#1ad96b, 0.8), alpha(#0d61a6, 0.8))
  background-position: bottom right 16px, center
  background-repeat no-repeat
  background-size 33%, 100%
.event-container__platform-3do
  background-image url('~assets/icons/platforms-bg-right/3do.svg?external'), linear-gradient(to bottom, alpha(#ffe51c, 0.8) 0%, alpha(#fe700e, 0.8) 50%, alpha(#fe0000, 0.8) 100%)
  background-position: bottom right 51px, center
  background-repeat no-repeat
  background-size 33%, 100%

.event-container__head-wrap
  padding 10px 16px
  background-color alpha(#080d11, 0.3)
  border-radius 8px
  border-bottom-left-radius 0px
  border-bottom-right-radius 0px
  min-height 45px
  box-sizing border-box
  display flex
  align-items center
  justify-content space-between

  &.event-container__head-wrap__rounded
    border-bottom-left-radius 8px
    border-bottom-right-radius 8px
    background-color alpha($color-white, 10%)

  @media $bp.phone
    padding 10px

.event-container__body-wrap
  padding 24px

  @media $bp.phone
    padding 16px

.event-container__comments-wrap
  border-top 1px solid alpha($color-white, 0.1)
  padding 16px
  $font14-paragraph()

  a
    display inline

.event-container.event-container__notification
  .event-container__body-wrap
    padding 10px

    @media $bp.phone
      padding 8px
