.game-card-featured
  position relative
  display flex
  flex 0 1 auto
  flex-direction column
  align-items flex-start
  justify-content space-between
  box-sizing border-box
  background-position center
  background-repeat no-repeat
  background-size cover
  border-radius 6px
  box-shadow 0 10px 20px 0 rgba(black, 0.2)
  z-index 1
  overflow hidden

  @media $bp.desktop
    height 340px
    padding 24px 24px 32px

  @media $bp.phone
    width 100%
    padding 16px 16px 24px

  &::before
    content ''
    position absolute
    top 0
    right 0
    bottom 0
    left 0
    display block
    width 100%
    height 100%
    background-image linear-gradient(to bottom, rgba(black, 0), black)
    opacity 0.5
    z-index -3

.game-card-featured__info
  margin-top auto

  .heading
    margin 8px 0 16px

  @media $bp.phone
    margin-top 0

    .heading
      margin 6px 0 8px

.game-card-featured__heading-link
  $remove-link-style()
  $heading3()

  display block
  margin-bottom 8px

  &::before
    content ''
    position absolute
    top 0
    right 0
    bottom 0
    left 0
    display block
    z-index -1

.game-card-featured__meta
  display flex
  flex 0 1 auto
  justify-content flex-start
  align-items center

.game-card-featured__rating
  width 22px
  height 22px
  margin-right 8px

.game-card-featured__user-list
  @media $bp.phone
    margin-bottom 24px

.game-card-featured__number
  position absolute
  bottom 0
  right -0.17em
  font-weight bold
  letter-spacing 0
  opacity 0.2
  z-index -2

  @media $bp.desktop
    font-size 144px

  @media $bp.phone
    font-size 96px
