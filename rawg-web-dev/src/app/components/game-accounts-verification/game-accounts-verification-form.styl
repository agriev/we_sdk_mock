.game-accounts-verification-form__container
  max-width 300px
  margin auto

.game-accounts-verification-form
  max-width 452px
  overflow hidden

  @media $bp.desktop
    flex 0 0 auto
    padding-right 50px

h2.game-accounts-verification-form__header
  font-size 44px

  @media $bp.phone
    font-size 24px
    margin-bottom 8px
    margin-top 0

.game-accounts-verification-form__top-text
  margin 16px 0 24px 0

  @media $bp.phone
    margin-top 0
    text-align center
    font-size 14px
    line-height 1.43
    letter-spacing 0.1px

.game-accounts-verification__verification-link-container
  margin-bottom 24px

.game-accounts-verification__verification-link-title
  font-size 18px
  line-height 28px
  margin-bottom 8px

.game-accounts-verification__verification-link-subcontainer
  display flex
  align-items center
  cursor pointer

  transition opacity .15s

  &.copied
    opacity .3

  .SVGInline
    margin-left 10px

  .game-accounts-verification__verification-link
    font-size 18px
    font-weight bold
    padding-bottom 4px
    border-bottom 1.5px solid alpha($color-white, 40%)
    display inline-block

.game-accounts-verification-form__items
  position static

.game-accounts-verification-form__item
  display flex
  align-items center
  padding 16px 0
  border-top 1px solid alpha(#979797, 20%)

  @media $bp.phone
    flex-direction column
    align-items flex-start

  position relative
  &::before
    position absolute
    right -71px
    top 50%
    margin-top -19px
    content ""
    width 38px
    height 38px
    clip-path inset(100% 100%)
    // transition clip-path .3s

    transform rotate(-45deg)
    border-radius 4px 0 0 0
    background linear-gradient(-45deg, rgba(255,255,255,0) 0%, rgba(0,0,0,0) calc(50% + 1px), rgba(0,0,0,.56) 50%, rgba(0,0,0,.56) 100%)

    .active&
      @media $bp.desktop
        clip-path inset(0% 0%)

.game-accounts-verification-form__label
  font-size 18px
  max-width 220px
  width 100%
  flex 0 1 auto
  display flex
  align-items center

  .SVGInline
    margin-left 8px
    position relative
    top 2px
    path, g
      opacity 1

.game-accounts-verification-form__field
  flex 1 1 auto

  @media $bp.phone
    margin-top 8px

  .loading_small-svg
    path
      fill white

.game-accounts-verification-form__help-icon
  width 16px
  height 16px
  cursor pointer
  transition opacity .3s
  opacity .4
  &:hover
  .active &
    opacity 1

  @media $bp.phone
    position absolute
    right 5px
    top 16px

.game-accounts-verification-form__message
  font-size 14px
  display flex
  align-items center

  .SVGInline
    margin-right 8px

.game-accounts-verification-form__message_success
  color alpha($color-white, 0.3)

.game-accounts-verification-form__message_error
  color $error-color

.game-accounts-verification-form__message_process
  color $color-yellow

.game-accounts-verification-form__message_inactive
  opacity .3

.game-accounts-verification-form__check-button
  background-color alpha($color-white, 10%)
  color $color-white
  font-size 14px
  box-shadow none
  width 100%
  height auto
  padding 12px 0
  margin-top 24px

  &:hover
    color $color-black

.game-accounts-verification-form__submit-container
  margin-top 32px
  display flex
  align-items center

  @media $bp.phone
    margin-top 16px
    flex-direction column

.game-accounts-verification-form__submit-button
  max-width 280px
  @media $bp.phone
    width 100%
    max-width 100%

.game-accounts-verification-form__skip-link
  font-size 18px
  color $color-white

  @media $bp.desktop
    margin-left 24px

  @media $bp.phone
    margin-top 16px
