.social-accounts-auth-block
  display flex
  justify-content space-between
  align-items center
  flex-direction column

  @media $bp.phone
    width calc(100vw - 40px)
    padding 0 20px

.social-accounts-auth-block__link
  display flex
  justify-content center
  align-items center
  text-align center

  height 40px
  border-radius 4px

  @media $bp.desktop
    width 304px
    font-size 16px

  @media $bp.phone
    width 100%
    max-width 400px
    font-size 16px

  &.social-accounts-auth-block__link_twitter
  &.social-accounts-auth-block__link_steam
    @media $bp.desktop
      margin-top 26px
    @media $bp.phone
      margin-top 16px

  &.social-accounts-auth-block__link_vk
    @media $bp.desktop
      margin-bottom 26px
    @media $bp.phone
      margin-bottom 16px

  line-height 0
  background-color transparent
  cursor pointer

  transition background-color .3s

  &.hidden
    display none

  &.social-accounts-auth-block__link_facebook
    background-color #4267b2

  &.social-accounts-auth-block__link_twitter
    background-color #33a4ec

  &.social-accounts-auth-block__link_steam
    background-color #3c7193

  &.social-accounts-auth-block__link_vk
    background-color #4a76a8

  svg
    transition all 0.3s

  @media $bp.desktop
    &:hover
      svg
        fill $color-white

.social-accounts-auth-block__icon
  width 24px
  height 24px
  margin 8px
  flex 0 0 auto

.social-accounts-auth-block__text
  flex 1 1 auto
