.review-form__game-selector
  margin-bottom 16px

  .input-search-main__input
    padding-left 24px
    font-size 24px

    &::placeholder
      color alpha($color-white, 20%)
      opacity 1
    &:focus::placeholder
      color alpha($color-white, 50%)

  .input-search-main__icon
    opacity .4

.review-form__game-selector__container_search-results
  max-width 502px
  left 0
  right 0
  border-top 1px solid rgba(255,255,255,0.1)
  background-color #14171a
  border-bottom-left-radius 4px
  border-bottom-right-radius 4px
  .dropdown__content
    background-color #14171a !important
    border-top-left-radius 0px
    border-top-right-radius 0px
    padding 0px

    .search-results__item:last-child
      border-bottom none

.review-form__game-selector__search-results
  position static

.review-form__game-selector__selected-game
  background rgba(0,0,0,.4)
  display flex
  align-items center
  border-radius 4px

  &__image
    width 56px
    height 56px
    margin 2px 16px 2px 2px
    flex 0 0 auto
    border-radius 4px

    background-size cover
    background-repeat no-repeat
    background-position center

  &__name
    font-size 16px
    font-weight bold
    display flex
    justify-content center
    align-items flex-start
    flex-direction column
    flex 1 1 auto

    .platforms
      margin-top 4px
      opacity .4

  &__close
    background-image url('~assets/icons/close.svg?external')
    background-repeat no-repeat
    background-position center
    background-size contain
    width 20px
    height 20px
    flex 0 0 auto
    margin-right 17px
    cursor pointer

    transition opacity .3s
    opacity .4
    &:hover
      opacity 1
