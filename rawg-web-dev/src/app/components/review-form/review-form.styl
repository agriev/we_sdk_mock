.review-form
  position relative
  z-index 1
  padding 40px
  background #202020
  border-radius 7px

  @media $bp.phone
    background none
    padding 20px
    padding-top 0

.review-form__title
  display block
  margin-bottom 24px
  font-size 44px

  @media $bp.phone
    font-size 30px
    text-align center

.review-form__subtitle
  display block
  line-height 1.17
  color $color-orange
  font-weight bold
  font-size 24px
  margin-bottom 8px

  @media $bp.phone
    font-size 18px
    text-align center
    line-height 1.56
    margin-bottom 4px

.review-form__ratings
  display flex
  flex-wrap wrap
  margin-bottom 10px

.review-form__rating
  &:not(:last-child)
    margin-right 14px
    margin-bottom 14px

    @media $bp.phone
      margin-right 6px

.review-form__field-textarea
  position relative
  margin-bottom 24px

  .editor > [contenteditable="true"]
    min-height 160px

.review-form__textarea
  display block
  width 100%
  min-width 100%
  max-width 100%
  height 200px
  padding 20px
  box-sizing border-box
  border none
  border-radius 4px

  color $color-white
  font-family inherit
  font-size 14px
  line-height 1.4

.review-form__reactions-title
  margin-bottom 16px
  font-size 16px
  color alpha($color-white, 0.4)

.review-form__reactions
  display flex
  flex-wrap wrap
  max-width 900px

.review-form__reaction
  margin-bottom 16px

  &:not(:last-child)
    margin-right 16px

.review-form__controls
  display flex
  align-items center
  justify-content flex-end
  padding 0
  max-width 900px
  box-sizing border-box

  @media $bp.phone
    flex-direction column
    padding 16px 5px 0

.review-form__publishing
  display flex
  flex-wrap wrap
  margin-top 0

  @media $bp.phone
    flex-direction column
    padding-bottom 30px

.review-form__publishing > div
  &:not(:last-child)
    margin-right 40px

    @media $bp.phone
      margin-right 0
      margin-bottom 15px

.review-form__publish-button
  display flex
  align-items center
  color rgba(255, 255, 255, 0.4)
  cursor pointer
  transition color 0.3s

.review-form__publish-icon
  position relative

  display flex
  justify-content center
  align-items center
  width 24px
  height 24px
  border-radius 50%

  background-color #172631
  line-height 0
  transition background-color 0.05s

  &::before
    position absolute
    left 0
    top 4px
    z-index -1

    display block
    height 16px
    width 40px
    border-radius 8px

    background-color alpha($color-white, 0.1)

    content ''

  svg
    fill alpha($color-white, 0.5)

.review-form__publish-button > span
  padding-left 20px
  font-size 14px

.review-form__publish-button:hover
.review-form__publish-button_active
  color $color-white

.review-form__publish-button_active
  .review-form__publish-icon
    margin-left 15px

    &::before
      left -15px

  & > span
    padding-left 5px

.review-form__publish-button_active .review-form__publish-icon_facebook
  background-color $facebook-color

.review-form__publish-button_active .review-form__publish-icon_twitter
  background-color $twitter-color

.review-form__button
  position relative
  display flex
  justify-content center
  align-items center
  width auto
  height auto

  button
    width 100%
    min-width 150px

  @media $bp.phone
    position relative

.review-form__text-subtitle
  font-size 16px
  color alpha($color-white, 0.4)
  margin-bottom 8px

  @media $bp.phone
    font-size 14px

.review-form__remove-button
  margin-right 14px
  box-sizing border-box
  font-size 16px
  color #ff4325
  cursor pointer
  transition color 0.3s

  &:hover
    color alpha(#ff4325, 0.5)

  .confirm-content
    box-sizing border-box
    margin-top -50px
    padding 20px
    padding-top 24px
    background-color #fff
    box-shadow 0 2px 5px 0 rgba(0, 0, 0, 0.5)
    border-radius 4px
    cursor auto

  .confirm-content__button_n
    color $color-white

    &:not(:hover)
      background-color alpha($color-white, 0.1)
