.review-card__background
  background-size cover
  opacity .3
  position absolute
  top 0
  left 0
  width 100%
  height 100%
  z-index -2

.review-card__obscurer
  display none
  $obscurerMaskImage = linear-gradient(to bottom, rgba(32, 32, 32, 0) 0%, rgba(24, 24, 24, 0.99) 100%)
  @supports (mask-image: $obscurerMaskImage)
    display block
    position absolute
    top 0
    left 0
    width 100%
    height 100%
    background black
    mask-image $obscurerMaskImage
    z-index -1
