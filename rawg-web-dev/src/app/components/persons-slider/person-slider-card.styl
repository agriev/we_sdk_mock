.persons-slider-card
  width 304px

  @media $bp.phone
    width 264px

  .avatar
    margin-bottom 16px

.person-slider-card__count
  padding-right 12px

.person-slider-card__icon
  background url('~assets/icons/user.svg?external') no-repeat right / 12px 12px
  opacity: 0.4

.persons-slider-card__empty-container
  width 304px
  opacity 0.5
  border-radius 6px
  background-color #2c2c2c
  display flex
  flex-direction column
  align-items center

  $card-height-big()

.persons-slider-card__empty-circle
  width 96px
  height 96px
  opacity 0.5
  border-radius 50%
  background-color #212121
  margin-top 32px

.persons-slider-card__empty-first
  margin-top 26px
  width 190px
  height 12px
  opacity 0.5
  background-color #212121

.persons-slider-card__empty-second
  margin-top 17px
  width 86px
  height 10px
  opacity 0.5
  background-color #212121

.persons-slider-card
  .card-template
    @media $bp.phone
      height 352px
