.share-rated
  width 798px
  font-size 30px
  display flex
  overflow hidden

  max-height 365px
  transition max-height .3s

  &.share-rated_active
    max-height 3000px

.share-rated__image
  width 525px
  flex 0 0 auto
  padding 26px 32px
  box-sizing border-box
  border-top-left-radius 6px
  border-bottom-left-radius 6px

  background-position top center
  background-size 100% 500px
  background-repeat no-repeat
  background-color #101010

.share-rated__current-user
  display flex

.share-rated__current-user-info
  flex 1 1 auto

.share-rated__current-user-info__name
  font-size 32px
  font-weight bold
  margin-bottom 4px

.share-rated__current-user-info__link
  font-size 14px
  margin-bottom 24px
  opacity .4
  a
    $remove-link-style()

.share-rated__current-user-avatar
  flex 0 0 auto

.share-rated__group
  & + .share-rated__group
    margin-top 24px

.share-rated__group-title
  font-size 24px
  font-weight bold
  line-height 36px
  margin-bottom 8px

.share-rated__group-header
  font-size 12px
  color alpha(white, 40%)
  margin-bottom 8px
  display flex

.share-rated__group-header__game
  flex 1 1 auto

.share-rated__group-header__score
  flex 0 0 auto

.share-rated__group-game
  display flex
  border-top 1px solid alpha(white, 10%)
  padding-top 12px
  margin-bottom 12px

.share-rated__group-game__number
  font-size 12px
  margin-right 13px
  color alpha(white, 40%)

.share-rated__group-game__avatar
  display block
  flex-grow 0
  flex-shrink 0
  width 56px
  height 56px
  margin-right 12px
  border-radius 4px
  border none

  background-color rgba(255,255,255,0.05)
  background-position center
  background-size cover

  @media $bp.phone
    width 48px
    height 48px
    margin-right 12px

.share-rated__group-game__info
  flex 1 1 auto

.share-rated__group-game__info-name
  font-size 14px
  font-weight bold
  flex 0 0 auto

.share-rated__group-game__info-platforms
  opacity .4
  display flex
  margin-top 5px

.share-rated__group-game__rating
  margin-left 16px
  flex 0 0 auto

.share-rated__footer
  display flex
  align-items center
  margin-top 36px

  .share-rated__footer-icons
    display flex
    flex 1 1 auto
    .rating .rating__icon
      width 27px
      height 34px
      background-size contain
      margin-right 6px

.share-rated__footer-text
  font-size 14px
  a
    $remove-link-style()

.share-rated__buttons
  width 273px
  flex 0 0 auto
  padding 26px
  box-sizing border-box
  background-color alpha(white, 7%)
  border-bottom-right-radius 6px
  border-top-right-radius 6px

.share-rated__buttons-title
  font-size 24px
  font-weight bold
  margin-bottom 8px

.share-rated__buttons-subtitle
  font-size 18px
  line-height 22px
  margin-bottom 16px

.share-rated__buttons-smalltitle
  font-size 12px
  opacity .2
  margin-bottom 10px

.share-rated__buttons-btn-download
  border-radius 4px
  display flex
  align-items center
  justify-content center
  font-size 16px
  padding 6px
  cursor pointer
  background-color white
  border none
  width 100%

.share-rated__buttons-download-arrow
  margin-top 28px
  display block
  position relative
  left -30px
