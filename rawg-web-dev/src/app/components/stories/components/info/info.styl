@import '../../stories.vars.styl'

.stories__info-wrap
  position absolute
  top 0
  left 0
  z-index 2
  pointer-events none
  width 100%
  height 100%

  @media $bp.desktop
    overflow hidden

.stories__info__loading
  position absolute
  top calc(50% - 25px)
  left calc(50% - 25px)

.stories__info__group-title
  display flex
  flex-direction column
  align-items center

  position absolute
  left 0
  width 100%

  transition opacity .3s, top .3s
  opacity 1

  @media (min-width: $page-width-desktop)
    top 140px

  @media $bp.desktop
    .stories__content.playing &
      opacity 0
      pointer-events none

  @media $bp.phone
    .stories__content.playing &
      opacity 0
      pointer-events none

  @media $storiesPhonePortrait
    top 12vh

  @media $storiesPhoneLandscape
    top 10vw

.stories__info__group-title__rawg-stories
  border-radius 4px
  background white
  padding 2px 8px
  color #1c1b16
  font-size 12px

.stories__info__group-title__text
  font-size 36px
  line-height 40px
  font-weight bold
  margin-top 8px
  text-align center

  @media $bp.desktop
    font-size 50px
    line-height normal

  @media $bp.phone
    font-size 32px
    line-height 36px

.stories__info__fullscreen-btn
  @media $bp.desktop
    display none

  display flex
  align-items center
  justify-content center
  pointer-events auto

  position absolute
  right 16px
  bottom 16px

  width 36px
  height 36px

  border-radius 4px
  border 1px solid alpha(white, 20%)
  background-color alpha(black, 40%)

  transition opacity .3s
  opacity 1

  .stories__content.first-play &
    opacity 0
    pointer-events none

  .SVGInline
    width 20px
    height 20px
