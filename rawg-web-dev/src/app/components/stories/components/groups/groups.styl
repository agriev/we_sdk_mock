.stories__groups__block
  display flex
  flex 0 0 auto
  align-items flex-end
  pointer-events auto
  transition bottom .3s
  position relative

  @media (min-width: $page-width-desktop)
    width 700px

  @media (min-width: $header-width-desktop)
    width 880px

  .embedded-stories &
    width 100%

  @media $bp.phone
    overflow auto
    // max-width calc(100vw - 30px)

  .slick-list
    width 100%
    height 100%
    left 0
    top 0
    z-index 3

    @media (min-width: $page-width-desktop)
      width 700px

    @media (min-width: $header-width-desktop)
      width 880px

    @media $bp.phone
      max-width calc(100vw - 30px)

    .embedded-stories &
      width calc(100vw - 208px)

  .slick-track
    min-width 100%

  .slick-slide
    @media $bp.phone
      padding-top 13px

  .slick-slider
    .embedded-stories &
      left 80px

.stories__groups__wrapper
  width 100%
  overflow hidden

.stories__info__group-wrap
  width 140px !important
  display flex !important
  flex-direction column
  align-items center
  padding-bottom 15px
  padding-top 15px

  @media (min-width $header-width-desktop)
    margin 0 4px

.stories__info__group
  width 86px !important
  height 86px
  position relative
  cursor pointer
  pointer-events auto
  flex 0 0 auto
  margin 10px 17.5px 48px
  user-select none

  $remove-link-style()

  &.stories__info__group_signup
  &.stories__info__group_signup:hover
    background-image none
    color white

  &::before
    content ''
    background-image radial-gradient(closest-side at center center, #fad961, rgba(247, 107, 28, 0))
    pointer-events none
    display block
    position absolute
    z-index 3
    left -7.5px
    width 101px
    height 30px
    opacity 0
    transition opacity .3s

    left 9px
    width 70px
    height 30px
    top calc(100% - 129px)

    .embedded-stories &
      display none

  &.stories__info__group_active
    &::before
      opacity 1

  &:after
    content ''
    background-image linear-gradient(to bottom, alpha(black, 0%) 60%, alpha(black, 100%))
    position absolute
    z-index 3
    left -1px
    top 0.75px
    width calc(100% + 6px)
    height calc(100% + 5px)
    display block
    border-radius 50%

    .embedded-stories &
      display none

  &:hover
    @media $bp.desktop
      .stories__info__group-background-1
      .stories__info__group-background-2
        filter brightness(150%)

.stories__info__group-background-1
.stories__info__group-background-2
  @media $bp.desktop
    transition filter .3s
    filter brightness(100%)

.stories__info__group-background-1
  position absolute
  top 2px
  left -1px
  width calc(100% - 4px)
  height calc(100% - 5px)
  border-radius 50%
  z-index 2
  background-color black
  background-repeat no-repeat
  background-position center

  border-color rgba(0,0,0,0.1)
  border-style solid
  border-width 3px

  .stories__info__group_new > &
  .stories__info__group_active > &
    border-color rgba(0,0,0,.95)

  .stories__info__group:hover > &
    @media $bp.desktop
      border-color rgba(0,0,0,.95)

  .stories__info__group_signup > &
  .stories__info__group_signup:hover > &
    border-color transparent
    background-color transparent
    background-image url(./assets/signup.svg?external)

  .stories__info__group_signup:hover > &
    @media $bp.desktop
      filter brightness(120%)

.stories__info__group-background-2
  position absolute
  top 0px
  left -3px
  width calc(100% + 6px)
  height calc(100% + 5px)
  border-radius 50%
  z-index 1

  .stories__info__group_new > &
    background-image linear-gradient(to bottom, #4CC1FF, #258EFF)

  .stories__info__group_active &
  .stories__info__group:hover &
    background-image linear-gradient(to bottom, #FAD961, #F76B1C)

.stories__info__group-name
  font-weight bold
  font-size 14px
  text-align center
  max-width 140px
  height 60px
  pointer-events none

  z-index 5
  position absolute

  @media $bp.phone
    top 87px
    width 110px

  @media $bp.desktop
    top 72px

  display flex
  align-items center
  justify-content center

  .embedded-stories &
    color black
    top 110px

.stories__info__group__play-icon
  position absolute
  z-index 4
  left 0
  top 0
  width calc(100% + 5px)
  height calc(100% + 5px)
  display flex
  justify-content center
  align-items center
  opacity 0
  transition opacity .3s

  .stories__info__group:hover &
    @media $bp.desktop
      opacity .5

  .stories__info__group_active &
  .stories__info__group_active:hover &
    @media $bp.desktop
      opacity 1

  .stories__info__group__play-icon-svg
    position relative
    left 3px

.stories__groups__arrow
  width 50px
  top 76px
  z-index 4
  opacity .6
  transition opacity .3s

  &:hover
    @media $bp.desktop
      opacity 1

  &.slider-arrow_prev
    left -50px

  &.slider-arrow_next
    right -50px

  .embedded-stories &
    top 68px

.stories__info__current-group-wrap
  position absolute
  box-sizing border-box
  pointer-events none

  margin auto
  max-width $page-width-desktop
  width 100%

  display flex

  transition bottom .3s
  z-index 4

  @media (min-width: $page-width-desktop)
    left calc(50% - 480px)
    width $page-width-desktop

  bottom 60px
  .stories__info-wrap.active &
    bottom 210px

.stories__info__current-group
  display flex
  align-items center
  border 1px solid transparent
  position relative

  opacity 0
  pointer-events none
  transition opacity .3s

  @media $bp.phone
    display none

  &.visible
    pointer-events auto
    opacity 1

  &:after
    content ''
    background-image linear-gradient(to bottom, alpha(black, 0%), alpha(black, 80%))
    position absolute
    z-index 3
    left 0px
    top 0px
    width 36px
    height 36px
    display block
    border-radius 50%
    border 1px solid transparent

.stories__info__current-group__icon
  width 36px
  height 36px
  display flex
  align-items center
  justify-content center

.stories__info__current-group__play-icon
  position relative
  transform translateY(0px) translateX(2px)
  z-index 4
  &, svg
    width 11px
    height 13px

.stories__info__current-group-background-1
  position absolute
  top 0px
  left 0px
  width 36px
  height 36px
  border-radius 50%
  z-index 2
  background-color black
  background-size cover
  background-repeat no-repeat
  background-position center
  border 1px solid black

.stories__info__current-group-background-2
  position absolute
  top -1.5px
  left -1.5px
  width 41.5px
  height 41.5px
  border-radius 50%
  z-index 1
  background-image linear-gradient(to bottom, #FAD961, #F76B1C)
  background-size cover
  background-repeat no-repeat
  background-position center

.stories__info__current-group-name
  margin-left 16px
  font-size 16px
  font-weight bold
