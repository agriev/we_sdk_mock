@import '../../stories.vars.styl'

.stories__videojs-wrap
  position absolute
  width 100%
  height 100%
  top 0
  left 0

  display flex
  align-items center
  justify-content center

.stories__videojs
  width 100vw
  height 56.5vw
  position absolute

  @media $storiesPhonePortrait
    width $storiesMobilePortraitWidth
    height $storiesMobilePortraitHeight
    max-height $storiesMobilePortraitMaxHeight

  @media $storiesPhoneLandscape
    width $storiesMobileLandscapeWidth
    height $storiesMobileLandscapeHeight

  &.hidden
    pointer-events none
    opacity 0

  .vjs-loading-spinner
    display none !important

  .vjs-fluid
    @media $storiesPhonePortrait
      width $storiesMobilePortraitWidth
    @media $storiesPhoneLandscape
      width $storiesMobileLandscapeWidth
