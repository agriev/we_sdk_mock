@import '../../stories.vars.styl'

.stories__video-react-wrap
  position absolute
  width 100%
  height 100%
  top 0
  left 0

  display flex
  align-items center
  justify-content center

.stories__video-react
  width 100%
  position absolute

  @media $bp.desktop
    height 540px
    .embedded-stories &
      height 100%

  // @media $bp.desktop
  //   height 658.125

  @media $storiesPhonePortrait
    width $storiesMobilePortraitWidth
    height $storiesMobilePortraitHeight
    max-height $storiesMobilePortraitMaxHeight

  @media $storiesPhoneLandscape
    width $storiesMobileLandscapeWidth
    height $storiesMobileLandscapeHeight

  &.hidden
    pointer-events none
    opacity 0

  &.poster
    .stories__video-react__poster
      display block

  .video-react-fluid
    @media $storiesPhonePortrait
      width $storiesMobilePortraitWidth
    @media $storiesPhoneLandscape
      width $storiesMobileLandscapeWidth

  .video-react-loading-spinner
  .video-react-big-play-button
  .video-react-bezel
    display none !important

  .video-react
    transition opacity .3s
    .stories__content.paused &
      opacity .6

.stories__video-react__poster
  background-size cover
  width 100%
  height 100%
  position absolute
  top 0
  left 0
  pointer-events none
  z-index 1
  display none
