@import './stories.vars.styl'

.stories__content-wrap
  position relative
  border-radius 6px

  display flex
  justify-content center

  box-shadow 0 10px 40px 0px rgba(0, 0, 0, .4)
  background rgba(0,0,0,0.2)

  .embedded-stories &
    box-shadow none

  @media $bp.phone
    margin 16px 5px 0

  @media $bp.desktop
    width 100%
    height 0
    margin-top 16px
    padding-bottom 56.25%

    margin-left auto
    margin-right auto

  .embedded-stories &
    margin 0

  // @media $bp.desktop
  //   height 658.125px
  //   margin-top 0

  @media screen and (min-width: $header-width-desktop) and (max-height: 55.5vw) and (max-width: 1440px)
    max-height 55.5vw

  @media $bp.phone
    top "-%s" % $storiesMobileMarginTop
    @media $storiesPhonePortrait
      height $storiesMobilePortraitHeight
      max-height $storiesMobilePortraitMaxHeight
    @media $storiesPhoneLandscape
      height $storiesMobileLandscapeHeight
      max-height calc(100vh - 30px)

.stories__content
  position absolute
  top 0
  left 0
  width 100%
  height 100%
  border-radius 6px

  .embedded-stories &
    position absolute
    top 0
    left 0
    width 100%
    height 100%

.stories__videos-shadow
  position absolute
  top 0
  left 0
  width 100%
  z-index 2
  background linear-gradient(to bottom, rgba(0,0,0,1), rgba(0,0,0,0))
  opacity .8
  pointer-events none
  border-top-left-radius 6px
  border-top-right-radius 6px

  @media $bp.phone
    height 156px

  @media $bp.desktop
    height 250px

.stories__content__video-previews img
  position absolute
  top 0
  left 0
  width 0
  height 0

.stories__videos
  position absolute
  top 0
  left 0
  background black
  width 100%
  height 100%
  z-index 1
  overflow hidden
  border-radius 6px

  .loading-2
    position absolute
    top 50%
    left 50%
    transform translateX(-25px)

.stories-margin
  position static

  @media $bp.desktop
    margin-top -56px

  @media $bp.phone
    margin-top 56px

  @media $bp.phone
    margin-top 180px
