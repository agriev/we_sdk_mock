.select-content.game__collections-list
  background white
  border-radius 6px
  padding 0 24px 16px
  box-sizing border-box

  .select-content__title
    padding 0
    font-size 16px

  .select-content__item
    font-size 14px
    padding-left 0

  .select-content__item_link
    margin-bottom 0
    padding-left 0

  .select-content__item  span
    // max-width 170px
    overflow hidden
    white-space nowrap
    text-overflow ellipsis
    line-height 1.4

  .select-content__icon-svg
    width 12px
    height 9px

  .select-content__search
    margin-bottom 10px
    padding-left 0

  .select-content__input
    font-size 14px
