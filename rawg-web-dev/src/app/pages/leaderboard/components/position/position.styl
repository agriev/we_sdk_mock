.leaderboard__item
  display flex
  align-items center
  padding 16px 0
  border-top 1px solid alpha($color-white, 10%)
  box-sizing border-box

  @media $bp.phone
    padding 14px 8px

  &:last-child:not(.leaderboard__item_user)
    padding-bottom 0

  &.leaderboard__item_user
    background-image linear-gradient(to bottom, #1ad96b, #0d61a6)
    border-radius 6px

    @media (min-width: 1024px)
      padding-left 24px
      padding-right 24px
      position relative
      left -24px
      width calc(100% + 48px)

    border-top none
    + .leaderboard__item
      border-top none

.leaderboard__item__id
  font-size 12px
  opacity .4
  display flex
  flex-direction column
  align-items center
  flex 0 0 17px

.leaderboard__item__image
  margin-left 18px
  flex 0 0 auto
  $remove-link-style()

  @media $bp.phone
    margin-left 4px

.leaderboard__item__name
  margin-left 16px
  font-size 16px
  font-weight bold
  flex 0 1 auto
  border-bottom none
  color $color-white
  transition opacity .3s
  width 50%

  > a
    $remove-link-style()

    &:hover
      opacity .8
      color white

  @media $bp.phone
    font-size 14px
    width 40%

.leaderboard__item__name__medal
  font-size 1.2em

.leaderboard__item__count-per-month
  width 25%
  flex 1 1 auto
  text-align right

.leaderboard__item__count-per-day
  width 25%
  flex 1 1 auto

.leaderboard__item__achievements-data
  margin-bottom 4px
  display flex
  align-items center
  font-size 13px
  flex 0 0 150px

  @media $bp.phone
    flex 1 1 150px

.leaderboard__item__achievements-data-gold
.leaderboard__item__achievements-data-silver
.leaderboard__item__achievements-data-bronze
  padding-left 12px
  position relative
  margin-right 8px
  font-weight normal

  @media $bp.hpne
    margin-top 6px

  &::before
    content ''
    position absolute
    left 0
    top 4px
    width 8px
    height 8px
    border-radius 50%

.leaderboard__item__achievements-data-gold::before
  background-image linear-gradient(to bottom, #fad961, #f76b1c)

.leaderboard__item__achievements-data-silver::before
  background-image linear-gradient(to bottom, #ffffff, #747474)

.leaderboard__item__achievements-data-bronze::before
  background-image linear-gradient(to bottom, #fa9393, #fd4100)

.tokens__leaderboard-help
  h2
    font-weight bold
    font-size 24px
    line-height 28px
  h3
    font-weight bold
    font-size 18px
    margin-top 24px
  p
    font-size 14px
    line-height 18px
    margin-top 8px
