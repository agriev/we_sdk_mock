.collection
  padding-bottom 0

.collection-head
  margin-top 32px
  text-align center

  @media $bp.phone
    padding 0 10px

.collection-title
  position relative
  display inline-block

  @media $bp.desktop
    margin-bottom 10px

  @media $bp.phone
    margin-bottom 0px

.collection-title__e3-2018-promo
  background-image url('~assets/icons/promos/e3-2018/e3-2018.svg?external')
  background-position-y center
  background-repeat no-repeat

  @media $bp.desktop
    position absolute
    left -100px
    top 0px
    border-right 1px solid rgba(255, 255, 255, .4)
    background-size 79px
    width calc(79px + 18px)
    height calc(40px + 28px)

  @media $bp.phone
    background-size contain
    width 64px
    height 32px
    margin 4px auto 12px auto

.collection-title__gamescom-promo
  background-image url('~assets/icons/promos/gamescom/gamescom-games-collections.svg?external')
  background-position-y center
  background-repeat no-repeat

  @media $bp.desktop
    position absolute
    left -100px
    top 0px
    border-right 1px solid rgba(255, 255, 255, .4)
    background-size 114px
    width calc(114px + 18px)
    height calc(80px + 28px)

  @media $bp.phone
    background-size contain
    width 80px
    height 57px
    margin 4px auto 12px auto

.collection-title__heading
  margin-top 24px

.collection-meta
  display flex
  justify-content flex-start
  align-items center

  font-size 12px
  color alpha($color-white, 0.5)

.collection-meta__is-private
  font-size 12px
  color alpha($color-white, 0.5)

.collection-meta .collection-meta__value
  margin 0 5px
  color $color-white

.collection-meta a
  $remove-link-style()

.collection-description
  margin 26px 0 40px
  max-width 632px
  font-size 14px
  text-align left

  @media $bp.phone
    margin-bottom 30px
    font-size 14px

.collection-button
  margin-bottom 40px

.collection-filter
  margin-bottom 40px

.collection__close-button
  align-self flex-end
  margin 25px 0

  @media $bp.phone
    margin-top 10px
    margin-right 10px

.collection__comments
  margin 30px auto 0
  width 100%
  max-width 650px

.collection__comments-title
  margin 0 auto 30px
  font-size 30px
  text-align center

.collection__comments-list
  padding 25px
  width 100%
  box-sizing border-box
  background-color alpha($color-white, 0.05)

  @media $bp.phone
    padding 20px 15px

.collection-feed
  margin 0 auto
  max-width 632px
  text-align left

.collection-add__link
  $remove-link-style()
  display block

.collection-feed-item__text
  position relative
  flex-shrink 0
  position relative
  font-weight 300
  line-height 1.4

  > .editor__insertion
    margin 16px 0

  img
    max-width 100%

  .game-card-about + &
    margin-top 16px

.collection-feed-item__text-medium
  $font12-small()

  @media $bp.phone
    margin-top 12px

.collection-feed-item__text-large
  font-size 16px

.collection-add__card.add-game-card
  width 100%
  height 116px
  text-align left
  color $color-white

  @media $bp.phone
    height 80px

  .add-game-card__icon
    height 58%
    font-weight 300

    @media $bp.desktop
      font-size 48px

  .add-game-card__title
    font-weight normal

    @media $bp.desktop
      font-size 24px
