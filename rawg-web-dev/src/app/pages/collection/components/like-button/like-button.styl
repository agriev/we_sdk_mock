.collection-like-button__wrap
  display inline-flex
  margin-right 8px
  user-select none

  filter grayscale(0%)

  transition filter 0.3s

  &.collection-like-button__wrap_vertical-layout
    flex-direction column
    align-items center
    margin-top 20px
    margin-bottom 32px
    width 100%

  &.collection-like-button__wrap_big-heading-position
    margin-left 12px
    transform translateY(-12px)

.collection-like-button
  font-size 32px
  line-height 1
  font-weight normal
  padding 9px 17px 9px 15px
  border-radius 28.5px
  cursor pointer

  display flex
  align-items center

  background-color alpha(white, 10%)
  transition background-color 0.3s, color 0.3s

  @media $bp.desktop
    &:hover
      background-color alpha(white, 20%)

  .collection-like-button__wrap_as-button > &
    border-radius 6px

    @media $bp.desktop
      &:hover
        color black
        background-color alpha(white, 100%)

  .collection-like-button__wrap_disabled > &
    cursor not-allowed
    @media $bp.desktop
      &:hover
        color white
        background-color alpha(white, 10%)

  .collection-like-button__wrap_big-fonts > &
    font-size 50px
    padding 9px 23px 9px 20px

  .collection-like-button__wrap_small-fonts > &
    font-size 20px
    padding 5px 10px 5px 10px


.collection-like-button__clicks-counter
  margin-left 0.1em

  &[data-letters="1"]
    width 0.6em
  &[data-letters="2"]
    width 1.25em
  &[data-letters="3"]
    width 1.85em
  &[data-letters="4"]
    width 2.35em

.collection-like-button__give-cake-label
  font-size 16px
  font-weight normal
  line-height 18px
  color alpha(white, 40%)
  display flex
  align-items center
  margin-left 12px

  margin-right 8px

  .collection-like-button__wrap_vertical-layout > &
    order -1
    margin-left 0
    margin-right 0
    margin-bottom 8px
    text-align center
    max-width unset

.collection-like-button__from-n-players
  font-size 14px
  font-weight normal
  line-height 18px
  margin-top 6px
  color alpha(white, 40%)

.collection-like-button__title
  color black
