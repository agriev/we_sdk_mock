.game-payment
  position fixed

  left 0
  top 0

  width 100%
  height 100%

  z-index 200

  &:not(.game-payment--alternative) iframe
    height 100% !important

  // background rgba(45, 45, 45, 0.8)
  background rgba(0, 0, 0, 0.7)
  backdrop-filter blur(20px)

  box-sizing border-box

  display flex
  align-items flex-end
  justify-content center

  padding 4px

  .checkout-modal
    height 100%
    width 100%

  .checkout-modal__container
    margin-top 0
    width 100%
    height 100%

  .checkout-modal__content
    overflow hidden

    width calc(100% + 8px)
    height 100%
    margin 0 -4px

    @media $bp.desktop
      width 100%
      margin 0

  .checkout-modal__overlay
    overflow hidden
    position relative
    background rgba(black, 0)

    width 100%
    height 100%

  .checkout-modal__close
    display none

  .xpaystation-widget-lightbox
    position relative

  .xpaystation-widget-lightbox-overlay
    display none

  .xpaystation-widget-lightbox-content
    position static

    width 100% !important

    margin 0 !important
    border-radius 8px

    overflow hidden

  &__system
    display flex
    flex-direction column
    justify-content flex-start
    align-items center

    width 100%
    height 100%

    iframe
      width 100%

    &-wrapper
      display flex
      flex-direction column

      max-width 460px

      width 100%
      height 100%

      padding 0 8px
      box-sizing border-box

      @media $bp.desktop
        padding 0

    &-header
      display flex
      flex-direction column
      align-items flex-end

      width 100%

      margin-top 20px
      position relative

      @media $bp.desktop
        flex-direction row

    &-items
      display flex
      width 100%

      box-sizing border-box

      padding 4px
      border-radius 8px

      background-color #383838

    &-item
      box-sizing border-box
      cursor pointer

      display flex
      align-items center
      justify-content center

      flex 1
      padding 8px

      text-align center
      height 40px

      font-size 14px
      line-height 24px

      color white
      border-radius 6px

      &--active
        background-color #cdf500
        color black

    &-close
      display flex
      align-items center
      justify-content center

      width 32px
      height 32px

      color rgba(#feffff, 0.6)
      cursor pointer

      margin-bottom 8px

      &:hover
        color white

      @media $bp.desktop
        position absolute
        margin 0

        right -40px
        top 0

      svg
        width 14px
        height 14px

    &-content
      display flex
      flex-direction column

      padding 20px 0
      box-sizing border-box

      width 100%
      flex 1

      overflow hidden

  @media $bp.desktop
    position absolute

    background rgba(20, 20, 20, 0.6)
    backdrop-filter blur(10px)
    align-items center

    padding 16px

  &-window
    position relative

    // display flex
    display none
    flex-direction column

    box-sizing border-box
    background-color #141414

    width 100%
    overflow-y auto

    border-radius 20px
    max-height 100%

    @media $bp.desktop
      max-width 488px
      border-radius 12px

      height 90%

  &-header
    flex-shrink 0
    z-index 10
    box-sizing border-box

    display flex
    align-items center
    justify-content space-between

    padding 0 20px
    height 72px

    background-color inherit
    width 100%

    position sticky
    top 0

    border-bottom 1px solid rgba(#feffff, 0.05)

    @media $bp.desktop
      height 64px

    &__title
      font-size 20px

      line-height 24px
      font-weight bold

    .SVGInline
      display none

      width 32px
      height 32px

      align-items center
      justify-content center

      color rgba(#feffff, 0.4)
      cursor pointer

      &:hover
        color white

      @media $bp.desktop
        display inline-flex

  &-methods
    display flex
    flex-direction column

    box-sizing border-box
    padding 20px 16px

    @media $bp.desktop
      padding 20px

  &-method
    display flex
    align-items center

    color rgba(#feffff, 0.2)
    padding 12px 12px 12px 16px

    box-sizing border-box
    background-color rgba(#feffff, 0.05)
    border-radius 6px

    cursor pointer

    &__icon
      display flex
      align-items center
      justify-content center

      width 36px
      height 36px

    &__body
      display flex
      align-items center
      flex 1

    &__info
      display flex
      margin 0 24px

      flex-direction column
      flex 1

    &__title
      color white

      font-size 16px
      line-height 24px

    &__subtitle
      color rgba(#feffff, 0.6)
      margin-top 2px

      font-size 14px
      line-height 20px

    &__chevron
      width 32px
      height 32px

      display inline-flex
      align-items center
      justify-content center

    & + &
      margin-top 4px

    &:hover
      background-color rgba(#feffff, 0.1)
      color rgba(#feffff, 0.6)

  &-footer
    display flex
    justify-content flex-end
    align-items center

    padding 20px 16px
    border-top 1px solid rgba(#feffff, 0.05)

    &__close
      display inline-flex
      align-items center
      justify-content center

      width 48px
      height 48px

      color white
      background-color rgba(#feffff, 0.1)
      border-radius 8px

      &:hover
        background-color rgba(#feffff, 0.2)

    @media $bp.desktop
      display none

  &-loader
    position absolute

    left 50%
    top 50%

    transform translate(-50%, -50%)

    display grid
    grid-template-columns 1fr 1fr

    div
      width 24px
      height 24px

      background rgba(254, 255, 255, 0.02)
      transform-origin top left

      &:nth-child(1)
        animation loader-square-1 4s linear infinite

      &:nth-child(2)
        background #CDF500
        animation loader-square-2 4s linear infinite

      &:nth-child(3)
        background rgba(254, 255, 255, 0.04)
        animation loader-square-3 4s linear infinite

      &:nth-child(4)
        background rgba(254, 255, 255, 0.07)
        animation loader-square-4 4s linear infinite

  &--alternative
    position static
    background unset
    z-index unset

    display flex
    flex-direction column
    justify-content flex-start

    // .game-payment__system,
    // .game-payment__system-wrapper
    //   flex 1

    .game-payment__system-header
      margin-top 0

    .game-payment__system-items
      flex-direction column

      @media $bp.desktop
        flex-direction row

    .game-payment__system-item + .game-payment__system-item
      margin-top 4px

      @media $bp.desktop
        margin-top 0

@keyframes loader-square-1
  0%, 16.67%
    transform translate(0, 0)

  25%, 41.67%
    transform translate(24px, 0)

  50%, 66.67%
    transform translate(24px, 24px)

  75%, 91.67%
    transform translate(0, 24px)

  100%
    transform translate(0, 0)

@keyframes loader-square-2
  0%, 16.67%
    transform translate(0, 0)

  25%, 41.67%
    transform translate(0, 24px)

  50%, 66.67%
    transform translate(-24px, 24px)

  75%, 91.67%
    transform translate(-24px, 0)

  100%
    transform translate(0, 0)

@keyframes loader-square-3
  0%, 16.67%
    transform translate(0, 0)

  25%, 41.67%
    transform translate(0, -24px)

  50%, 66.67%
    transform translate(24px, -24px)

  75%, 91.67%
    transform translate(24px, 0)

  100%
    transform translate(0, 0)

@keyframes loader-square-4
  0%, 16.67%
    transform translate(0, 0)

  25%, 41.67%
    transform translate(-24px, 0)

  50%, 66.67%
    transform translate(-24px, -24px)

  75%, 91.67%
    transform translate(0, -24px)

  100%
    transform translate(0, 0)
