.not-supported-banner
  display flex
  align-items flex-start

  box-sizing border-box
  flex 1

  padding 12px 16px
  border-radius 12px
  background-color rgba(#ffd400, 0.07)

  font-size 14px
  line-height 20px

  width calc(100% - 20px)
  margin -32px auto 32px auto

  color white
  border 1px solid rgba(#ffd400, 0.3)

  &__body
    display flex
    flex-direction column

    font-size 14px
    line-height 18px

  &__link
    margin-top 8px
    color #cdf500
    cursor pointer

  .SVGInline
    display inline-flex
    margin-right 16px
    color #ffd400

  &--added
    align-items center
