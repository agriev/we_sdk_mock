.game-reviews
  margin-top 64px
  position relative
  display flex
  flex-direction column

  @media $bp.phone
    margin-top 12px
    padding 0 10px

.game-reviews__item
  margin-bottom 16px
  @media $bp.phone
    margin-bottom 8px

  & > .review-card__top-block
  & > .review-card__bottom-block
    background-color alpha($color-black, 0.3)

.dropdown.game-reviews__ordering
  position absolute
  top -48px
  right -5px

  @media $bp.phone
    position relative
    top 0
    right auto
    margin-bottom 16px

  .dropdown__button
    @media $bp.phone
      justify-content center

.game-reviews__ordering-container
  min-width 175px

.button.game-reviews__ordering-button
  position relative
  font-size 14px
  font-weight 300
  color $color-white

  .select-button__title
    margin-right 10px

.game-reviews__ordering-content
  font-size 14px

.game-reviews__add-wrapper
  display flex
  flex-direction column
  position relative

  .game-reviews__add-link
    $remove-link-style()

    @media $bp.desktop
      margin-bottom 24px

    &:hover + .game-reviews__fastadd-buttons
      opacity 0

    .game-reviews__add-card

      @media $bp.phone
        margin-bottom 8px

      &:not(:hover)
        background-color alpha($color-black, 0.3)

  .game-reviews__fastadd-buttons
    position absolute
    top 0
    right 0
    padding-top 25px
    padding-right 25px
    max-width 300px

    opacity 1
    transition opacity .3s ease

    display flex
    flex-wrap wrap
    justify-content flex-end

    @media $bp.phone
      display none

    .rating.rating_button
      height 30px
      padding 0 12px
      margin-bottom 9px
      margin-left 7px
      .rating__icon
        width 19px
        height 19px
        &.rating__icon_exceptional
          width 24px
          height 24px
          position relative
          top -2px

      .rating__text
        font-size 12px

.game-reviews__edit-link
  $remove-link-style()
  display flex
  align-items center
  height 80px
  margin-bottom 16px
  padding-left 24px
  font-size 24px
  color $color-white
  text-align left
  background-color alpha($color-black, 0.3)
  border-radius 4px
  border-bottom none
  transition 0.3s

  &:hover
    color $color-black
    background-color #fff
    transition 0.3s

.game-reviews__more-button
  $remove-link-style()
  $more-button()
  margin 0 auto
  text-transform capitalize

  &_hidden
    display none
