.no-results
  display flex
  flex-direction column
  align-items center

.no-results__icon
  background url('~assets/icons/emoji/no-results.png') center / contain no-repeat
  margin-top 40px
  margin-bottom 24px
  width 88px
  height 88px

.no-results__text
  $font18-large()
  line-height: 1.5;
  text-align center
  color alpha($color-white, 0.5)

  .no-results__link
    color alpha($color-white, 0.5)
