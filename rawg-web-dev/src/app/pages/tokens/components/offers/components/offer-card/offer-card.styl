.tokens__offer-card
  width 222px
  // height 336px
  background-color alpha($color-white, 0.06)
  border-radius 6px;
  display flex
  flex-wrap wrap
  justify-content center
  padding-bottom 30px
  box-sizing border-box

  @media $bp.phone
    width: 100%
    max-width: 222px;
    height auto
    padding-bottom 16px
    &:not(:last-child)
      margin-bottom 8px

  &:nth-child(n + 5)
    margin-top 24px
    @media $bp.phone
      margin-top 0

.tokens__offer-card__img
  border-top-left-radius 6px
  border-top-right-radius 6px
  flex-basis 100%
  height 200px
  background alpha($color-white, 0.05) no-repeat center / cover
  
  @media $bp.phone
    height 132px

.tokens__offer-card__name
  font-size 18px
  font-weight bold
  text-align center
  margin-top 16px
  flex-basis 100%
  padding 0 16px;
  margin-bottom 16px
  line-height normal

  @media $bp.phone
    font-size 14px
    margin-bottom 4px

.tokens__offer-card__button
  margin-left 16px
  @media $bp.phone
    flex-basis 100%
    margin 0 16px
    height 24px
    justify-content center
    margin-top 8px
    font-size 12px
    
    .SVGInline-svg
      width 15px
      height 15px

.tokens__offer-card__price
  @media $bp.phone
    padding-right 17px