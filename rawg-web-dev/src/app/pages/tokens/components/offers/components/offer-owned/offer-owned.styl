.offer-owned
  background-color #55a229
  border-radius 6px
  padding 24px
  padding-bottom 36px
  margin 24px 0

  @media $bp.phone
    width 100%
    padding 24px
    margin-top 16px
    margin-bottom 32px

.offer-owned__title
  font-size 24px
  margin 0
  @media $bp.phone
    font-size 18px

.offer-owned__text
  font-size 14px
  line-height 1.29
  margin-top 8px

.offer-owned__button
  font-size 18px
  font-weight normal
  height 44px
  padding 0 32px
  margin 16px 0
  @media $bp.phone
    width 100%

.offer-owned__code-button
  font-size 18px
  font-weight bold
  text-decoration underline
  color $color-white
  height auto
  margin 0
  padding 0
  padding-bottom 2px

.offer-owned__code
  font-size 18px
  display flex
  position relative
  a
    font-weight bold
    color: $color-white

  span
    margin-right 4px
  
  @media $bp.phone
    font-size 16px

.offer-owned__check-icon
  margin-left 8px

  .offer-owned__check-icon-svg
    width 23px
    height 18px

  path
    stroke #fff
    stroke-width 3

.offer-owned__copy-icon
  align-self baseline
  margin-left 8px
  position relative
  top 2px

  & g > rect:last-child
    fill #55a229