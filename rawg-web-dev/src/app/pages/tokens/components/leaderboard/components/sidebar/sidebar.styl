.tokens__leaderboard-sidebar
  display flex
  box-sizing border-box
  border-radius 6px

  .slick-list
    max-width 100vw

  @media $bp.desktop
    flex-direction column
    width 100%
    max-width 304px
    position relative
    top -85px

  @media $bp.phone
    flex-direction row
    order -1
    margin-bottom 25px

  .slick-dots
    bottom -20px
    max-width 100vw

.tokens__leaderboard-help-block
  background alpha($color-white, 6%)

  @media $bp.desktop
    padding 0 24px

    &:nth-of-type(1)
      border-top-left-radius 6px
      border-top-right-radius 6px
      padding-top 24px

    &:nth-of-type(2)
      border-bottom-left-radius 6px
      border-bottom-right-radius 6px
      padding-bottom 24px


  @media $bp.phone
    width 200px !important
    height 150px
    padding 24px

    .tokens__leaderboard-sidebar .slick-slide[data-index="0"] &
      border-top-left-radius 6px
      border-bottom-left-radius 6px
      margin-left 10px

    .tokens__leaderboard-sidebar .slick-slide[data-index="1"] &
      border-top-right-radius 6px
      border-bottom-right-radius 6px
      margin-right 10px

  h2
    font-size 24px
    font-weight bold
    line-height 28px
    @media $bp.phone
      font-size 16px

  h3
    font-size 18px
    font-weight bold
    @media $bp.desktop
      margin-top 24px
    @media $bp.phone
      font-size 16px

  p
    font-size 14px
    line-height 18px
    margin-top 8px
    @media $bp.phone
      font-size 12px

  @media $bp.desktop
    flex-direction column

  @media $bp.phone
    flex-direction row

.tokens__leaderboard-help__karma-table
  display flex
  flex-direction column
  margin-bottom 16px

.tokens__leaderboard-help__karma-table-item
  display flex

  margin-top 16px

.tokens__leaderboard-help__karma-table__positions
  padding 5px 12px 5px 0
  border-right 1px solid alpha(white, 10%)
  width 83px
  box-sizing border-box

  .tokens__leaderboard-help__karma-table__positions-value
    font-size 24px
    font-weight bold
    display flex
    align-items baseline

    @media $bp.phone
      font-size 16px

    .SVGInline
      height 12px
      display flex
      margin-left 8px
      @media $bp.phone
        margin-left 4px
        height 8px

  .tokens__leaderboard-help__karma-table__positions-desc
    font-size 12px
    opacity .4
    @media $bp.hone
      font-size 11px

.tokens__leaderboard-help__karma-table__reward
  padding 5px 18px
  border-right 1px solid alpha(white, 10%)
  display flex
  flex-direction column
  justify-content center
  align-items center

  .tokens__leaderboard-help__karma-table__reward-value
    font-size 16px
    position relative
    text-align center
    padding 0 16px
    margin-right 10px
    margin-top 5px
    @media $bp.phone
      padding 0 14px
      margin-right 0

    &::before
    &::after
      content ''
      background-repeat no-repeat
      background-position center
      background-size contain
      top 0px
      width 11px
      height 18px
      position absolute
      background-image url('~app/pages/tokens/assets/wreath.svg?external')

      @media $bp.phone
        width 10px
        height 18px
        top 0

    &::before
      left 0

    &::after
      right 0
      transform rotateY(180deg)


  .tokens__leaderboard-help__karma-table__reward-desc
    font-size 12px
    opacity .4
    margin-top 5px
    @media $bp.phone
      font-size 11px
      text-align center
      white-space nowrap


.tokens__leaderboard-help__karma-table__achievements
  margin-left 16px

.tokens__leaderboard-help__karma-table__achievements-data-gold
.tokens__leaderboard-help__karma-table__achievements-data-silver
.tokens__leaderboard-help__karma-table__achievements-data-bronze
  font-size 13px
  padding-left 12px
  position relative
  margin-right 8px
  margin-bottom 4px

  @media $bp.phone
    font-size 11px
    top 5px

  &::before
    content ''
    position absolute
    left 0
    top 4px
    width 8px
    height 8px
    border-radius 50%

.tokens__leaderboard-help__karma-table__achievements-data-gold::before
  background-image linear-gradient(to bottom, #fad961, #f76b1c)

.tokens__leaderboard-help__karma-table__achievements-data-silver::before
  background-image linear-gradient(to bottom, #ffffff, #747474)

.tokens__leaderboard-help__karma-table__achievements-data-bronze::before
  background-image linear-gradient(to bottom, #fa9393, #fd4100)
