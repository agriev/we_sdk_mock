.tokens__leaderboard__item
  display flex
  align-items center
  padding 16px 0
  border-top 1px solid alpha($color-white, 10%)
  box-sizing border-box

  @media $bp.phone
    padding 14px 8px

  &:last-child:not(.tokens__leaderboard__item_user)
    padding-bottom 0

  &.tokens__leaderboard__item_user
    background-image linear-gradient(to bottom, #1ad96b, #0d61a6)
    border-radius 6px

    @media $bp.desktop
      padding-left 24px
      padding-right 24px
      position relative
      left -24px
      width calc(100% + 48px)

    border-top none
    + .tokens__leaderboard__item
      border-top none

.tokens__leaderboard__item__id
  font-size 12px
  opacity .4
  display flex
  flex-direction column
  align-items center
  flex 0 0 17px

.tokens__leaderboard__item__image
  margin-left 18px
  flex 0 0 auto
  @media $bp.phone
    margin-left 4px

.tokens__leaderboard__item__name
  margin-left 16px
  font-size 16px
  font-weight bold
  flex 1 0 auto
  border-bottom none
  color $color-white
  transition opacity .3s
  width 220px
  &:hover
    opacity .4

  @media $bp.phone
    font-size 14px
    width auto
    flex 1 1 auto

.tokens__leaderboard__item__achievements-data
  margin-bottom 4px
  display flex
  align-items center
  font-size 13px
  flex 0 0 150px

  @media $bp.phone
    flex 1 1 150px

.tokens__leaderboard__item__achievements-data-gold
.tokens__leaderboard__item__achievements-data-silver
.tokens__leaderboard__item__achievements-data-bronze
  padding-left 12px
  position relative
  margin-right 8px
  font-weight normal

  @media $bp.hpne
    margin-top 6px

  &::before
    content ''
    position absolute
    left 0
    top 4px
    width 8px
    height 8px
    border-radius 50%

.tokens__leaderboard__item__achievements-data-gold::before
  background-image linear-gradient(to bottom, #fad961, #f76b1c)

.tokens__leaderboard__item__achievements-data-silver::before
  background-image linear-gradient(to bottom, #ffffff, #747474)

.tokens__leaderboard__item__achievements-data-bronze::before
  background-image linear-gradient(to bottom, #fa9393, #fd4100)

.tokens__leaderboard__item__reward
  font-size 14px
  text-align right

  @media $bp.desktop
    min-width 100px

  > span
    position relative
    text-align center
    padding 0 16px
    @media $bp.phone
      padding 0 14px

    &::before
    &::after
      content ''
      background-repeat no-repeat
      background-position center
      background-size contain
      top -1px
      width 11px
      height 18px
      position absolute
      background-image url('~app/pages/tokens/assets/wreath.svg?external')

      @media $bp.phone
        width 10px
        height 18px
        top 0

    &::before
      left 0

    &::after
      right 0
      transform rotateY(180deg)

.tokens__leaderboard__item__reward-tooltip
  color #151515
  font-size 14px

.tokens__leaderboard-help
  h2
    font-weight bold
    font-size 24px
    line-height 28px
  h3
    font-weight bold
    font-size 18px
    margin-top 24px
  p
    font-size 14px
    line-height 18px
    margin-top 8px
