.tokens__leaderboard-header-container
  max-width 1000px
  width 100%
  margin 48px auto 0 auto
  order 80

  @media $bp.phone
    margin 48px auto 0 auto

  .tokens-header
    @media $bp.desktop
      width 608px

.tokens__leaderboard-container
  max-width 1024px
  width 100%
  margin 0 auto 0 auto
  display flex
  align-items flex-start
  order 81

  @media $bp.desktop
    position relative
    left 24px

  @media $bp.phone
    flex-direction column

.tokens__leaderboard
  width 608px
  margin-right 48px

  @media $bp.phone
    position relative
    width 100%

.tokens__leaderboard-wrap
  display flex
  flex-direction column

  @media $bp.phone
    margin 0 4px

.tokens__leaderboard__items

  &.tokens__leaderboard__items_user
    margin-top 24px
    .tokens__leaderboard__item:first-child
      border-top none
      padding-top 0

  .tokens__leaderboard__items__empty-icon
    margin 0 auto 20px
    width 140px
    height 140px
    background url("~assets/icons/emoji/zzz.png") no-repeat center
    background-size cover
  .tokens__leaderboard__items__empty-text
    margin 0 auto
    max-width 200px
    text-align center
    color alpha($color-white, 0.5)

    display flex
    flex-direction column
    align-items center

.tokens__leaderboard__wreaths
  display inline-block

  &::before
  &::after
    background url('~app/pages/tokens/assets/wreath-gold.svg?external') no-repeat center / contain
    content ''
    width 32px
    height 36px
    display inline-block
    position relative
    top 5px

    @media $bp.phone
      width 25px
      height 24px
      top 3px

  &::after
    transform rotateY(180deg)

.tokens__leaderboard__headings
  font-size 12px
  padding 16px 0
  width 100%
  display flex
  box-sizing border-box

  @media $bp.phone
    padding 8px 5px

  .tokens__leaderboard__heading
    opacity .4

    &:nth-child(1)
      text-align left
      @media $bp.desktop
        width 600px
      @media $bp.phone
        flex 1 1 auto
    &:nth-child(2)
      text-align left
      @media $bp.desktop
        width 280px
    &:nth-child(3)
      text-align right
      @media $bp.desktop
        width 143px

.tokens__leaderboard__more-games
  display flex
  align-items center
  box-sizing border-box
  margin 24px 0 0

  @media $bp.phone
    padding 0 10px

.tokens__leaderboard__more-games-phone-button
  background-color alpha($color-white, 10%)
  box-shadow none
  color white
  font-size 14px
  padding 12px
  height auto
  margin 16px 0 0
  width 100%
  &:hover
    background-color alpha($color-white, 10%)
    box-shadow none

  svg path
    fill white

.tokens__leaderboard__more-games-line
  height 1px
  background-color alpha($color-white, 0.1)

  &:first-child
    width 92px

    @media $bp.phone
      width 44px

  &:last-child
    flex-grow 1

.tokens__leaderboard__more-games-button
  position relative

  display inline-flex
  align-items center
  padding 0 15px

  font-size 12px
  letter-spacing 1px
  text-transform uppercase
  cursor pointer
  transition color 0.3s

  svg g
    transition fill 0.3s

  &:hover
    color alpha($color-white, 0.5)

    svg g
      fill alpha($color-white, 0.5)

.tokens__leaderboard__more-games-button-icon
  margin-left 10px

  .arrow__icon__small
    width 4.2px
    height 7.2px

.tokens__leaderboard__loading
  margin 40px auto
  text-align center

  svg
    fill alpha($color-white, 0.1)

.tokens__leaderboard__filter
  position relative
