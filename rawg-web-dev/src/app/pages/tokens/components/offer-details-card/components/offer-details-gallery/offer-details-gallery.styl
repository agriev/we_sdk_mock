.offer-details-gallery
  display flex
  flex-wrap wrap
  flex-basis 466px
  justify-content space-between
  align-self start
  grid-row 1 / end
  @media $bp.phone
    grid-row auto
    justify-content flex-start

.offer-details-gallery__image_main
  width 466px
  height 466px
  background alpha($color-white, 0.05) no-repeat center / cover
  border-radius 6px
  margin-bottom 33px
  @media $bp.phone
    width 100%
    height 306px
    margin-bottom 14px

.offer-details-gallery__image
  width 98px
  height 98px
  border-radius 5px
  background alpha($color-white, 0.05) no-repeat center / cover
  cursor pointer
  @media $bp.phone
    width 64px
    height 64px
    border-radius 4px
    &:nth-child(n + 3)
      margin-left 14px

.offer-details-gallery__image_active
  position relative
  box-shadow: 0px 0px 0px 3px #fad961
  cursor default
  @media $bp.phone
    box-shadow: 0px 0px 0px 1px #fad961
    

.offer-details-gallery__placeholder
  width 98px
  height 0
  @media $bp.phone
    display none