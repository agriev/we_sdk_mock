.tokens__join
  display flex
  justify-content center
  margin 24px auto 0 auto
  box-sizing border-box
  max-width $page-width-desktop
  order 10

  @media $bp.phone
    width 100%

  .tokens__join-btn
    display flex
    flex-direction column
    align-items center

    @media $bp.phone
      width 100%

    .tokens__join-error
      margin-top 10px

  @media $bp.phone
    flex-direction column
    align-items center
    padding 0 10px

  .button_medium
    width auto
    padding 0 36px
    height 44px
    display flex
    align-items center
    font-size 16px

    @media $bp.phone
      width 100%
      justify-content center

  .user-list-line
    margin-left 8px

    .user-list-line__count
      background-color black
      color white
