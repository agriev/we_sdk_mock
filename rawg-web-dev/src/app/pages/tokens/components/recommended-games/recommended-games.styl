.tokens__recommended
  margin 24px auto 0 auto
  max-width 1000px
  width 100%
  position relative
  order 70

  @media $bp.desktop
    padding-left 24px

  @media $bp.phone
    flex-direction column

.tokens__recommended__title
  font-size 36px

  @media $bp.phone
    font-size 24px
    text-align center

.tokens__recommended__games
  display flex
  flex-direction column

.tokens__recommended__games-background
  position absolute
  left 0
  margin-top -300px
  z-index -10
  opacity 0.4

  width 100%
  height 600px
  background no-repeat center / cover

  @media $bp.phone
    margin-top -100px
