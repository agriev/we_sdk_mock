.tokens__share-container
  margin 24px auto 0 auto
  max-width 1180px
  width 100%
  position relative
  left 3px
  z-index 2
  order 40

  @media $bp.phone
    margin-top 16px

.tokens__share
  display flex
  align-items center

  .tokens__share-container_active &
  .tokens__share-container_failure &
  .tokens__share-container_completed:not(.tokens__share-container_joined) &
    justify-content center

  @media $bp.phone
    flex-direction column

.tokens__share__title
  font-size 16px
  opacity .4
  margin-right 16px
  @media $bp.phone
    font-size 14px
    margin-right 0
    margin-bottom 16px

.tokens__share__btns
  display flex
  align-items center
  flex-wrap wrap
  @media $bp.phone
    justify-content center
    padding 0 10px

.tokens__share__btn
  padding 4px 16px
  font-size 14px
  line-height 22px
  cursor pointer
  border-radius 4px
  margin-right 8px
  @media $bp.phone
    font-size 13px
    margin-bottom 8px

  transition color .3s, background-color .3s
  color alpha($color-white, 60%)
  background-color alpha($color-white, 7%)
  &:hover
    color alpha($color-black, 80)
    background-color alpha($color-white, 80%)
