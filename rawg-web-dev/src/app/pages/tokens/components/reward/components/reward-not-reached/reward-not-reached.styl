.tokens__reward-not-reached
	display flex
	flex-direction column

.tokens__reward-not-reached__title
	font-size 24px
	text-align center
	margin-bottom 8px
	@media $bp.phone
		font-size 18px
		margin-bottom 11px

.tokens__reward-not-reached__text
	font-size 14px
	color alpha($color-white, 0.4)
	text-align center
	@media $bp.phone
		font-size 13px

.tokens__reward-not-reached__progressbar
	margin 24px auto

.tokens__reward-not-reached__button
	width 100%
	height 44px
	border-radius 6px
	background-color alpha($color-white, 0.4)
	font-size 16px
	font-weight normal
	margin-top 42px
	position relative
	&::before
		content ''
		height 1px
		position absolute
		top -19px
		left 0
		right 0
		background-color alpha($color-white, 0.2)