.tokens__stats__header
  display flex
  align-items center
  padding 32px 34px 17px

  @media $bp.phone
    flex-direction column
    padding 24px 24px 17px

  .tokens__stats__header__title
    flex 1 0 auto
    font-size 48px
    line-height 74px

    display flex
    align-items center

    @media $bp.phone
      font-size 24px
      line-height 28px

  .tokens__stats__header__title__cup
    @media $bp.desktop
      font-size 40px

  .tokens__stats__header__users
    margin-right 16px

    .user-list-line__plus-users
      $font18-large()

      > strong::before
        content ''

  .tokens__stats__header__time-left
    flex 0 1 auto
    padding-left 38px
    height 30px
    background url('~app/pages/tokens/assets/timer.png') no-repeat left center / contain
    display flex
    align-items center
    font-size 18px

    @media $bp.phone
      margin-top 3px
