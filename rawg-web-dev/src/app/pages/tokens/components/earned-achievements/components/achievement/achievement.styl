.tokens__earned-achievements__item
  display flex
  padding 16px 0
  border-top 1px solid alpha($color-white, 10%)

.tokens__earned-achievements__item__id
  font-size 12px
  opacity .4

.tokens__earned-achievements__item__image
  margin-left 8px
  width 56px
  height 56px
  min-width 56px
  min-height 56px
  background-repeat no-repeat
  background-size contain
  background-position center
  border-radius 4px

.tokens__earned-achievements__item__info
  margin-left 16px
  flex 1 1 auto

  @media $bp.desktop
    margin-right 10px

  // max-width 270px
  // @media $bp.phone
  //   max-width calc(100% - 176px)

.tokens__earned-achievements__item__info__name
  font-size 16px
  font-weight bold

  @media $bp.phone
    font-size 14px

  > .tokens__earned-achievements__item__reward
    float right

  .SVGInline
    margin-left 6px
    path
      stroke white

.tokens__earned-achievements__item__info__desc
  font-size 12px
  margin-top 4px
  @media $bp.desktop
    opacity .4

.tokens__earned-achievements__item__info__date
  margin-top 8px
  font-size 12px
  color alpha($color-white, 40%)
  display inline

  &.tokens__earned-achievements__item__info__date-new
    > .tokens__earned-achievements__item__info__date__time
      opacity 1
      color #4687d6
      &::after
        content ''
        width 8px
        height 8px
        border-radius 50%
        background-color #4687d6
        display inline-block
        margin-left 4px

.tokens__earned-achievements__item__info__date__time
  display inline-block

.tokens__earned-achievements__item__info__date__game
  @media $bp.phone
    margin-right 8px
  a
    border-bottom 1px solid transparent
    color alpha($color-white, 40%)
    &:hover
      border-bottom 1px solid rgba(255,255,255,0.5)

.tokens__earned-achievements__item__game
  font-size 12px
  opacity .4
  flex 1 1 auto
  text-align right
  a
    border-bottom 1px solid transparent
    color white
    &:hover
      border-bottom 1px solid rgba(255,255,255,0.5)


.tokens__earned-achievements__item__reward
  font-size 14px
  min-width 72px
  text-align right
  margin-bottom 10px

  > span
    position relative
    text-align center
    padding 0 16px
    @media $bp.phone
      padding 0 14px

    &::before
    &::after
      content ''
      background-repeat no-repeat
      background-position center
      background-size contain
      top 0px
      width 11px
      height 18px
      position absolute

      .tokens__earned-achievements__item__reward_bronze&
        background-image url('~app/pages/tokens/assets/wreath-bronze.svg?external')

      .tokens__earned-achievements__item__reward_silver&
        background-image url('~app/pages/tokens/assets/wreath-silver.svg?external')

      .tokens__earned-achievements__item__reward_gold&
        background-image url('~app/pages/tokens/assets/wreath-gold.svg?external')

      @media $bp.phone
        width 10px
        height 18px
        top 0

    &::before
      left 0

    &::after
      right 0
      transform rotateY(180deg)

.tokens__earned-achievements__item__reward-tooltip
  color #151515
  font-size 14px

.tokens__earned-achievements-help
  h2
    font-weight bold
    font-size 24px
    line-height 28px
  h3
    font-weight bold
    font-size 18px
    margin-top 24px
  p
    font-size 14px
    line-height 18px
    margin-top 8px
