.tokens__next-starts
  padding 32px 94px 40px
  background-color alpha(white, 6%)
  display flex
  flex-direction column
  justify-content center
  align-items center
  margin 48px auto 0 auto
  max-width $page-width-desktop
  border-radius 6px
  box-sizing border-box
  order 50

  @media $bp.phone
    padding 20px 10px 20px
    margin 25px 10px 0 10px

  .tokens__next-starts__title
    font-size 24px
    line-height 40px
    text-align center

    @media $bp.phone
      font-size 16px
      line-height 20px

  .tokens__next-starts__time
    margin-top 7px
    font-size 54px
    line-height 76px
    font-weight bold
    text-align center

    @media $bp.phone
      font-size 32px
      line-height 42px

  .tokens__next-starts__remind-by-email-btn
    margin-top 20px
    font-size 16px
    height 44px

  .tokens__next-starts__join-btn
    margin-top 20px
    font-size 16px
    height 44px

  .tokens__next-starts__join-text
    opacity .4
    margin-top 16px
    font-size 14px

    @media $bp.phone
      font-size 12px
