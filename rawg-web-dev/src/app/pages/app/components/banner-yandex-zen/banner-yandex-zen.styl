$yandexZenBannerDesktop = 'screen and (min-width: 550px)'

.banner-yandex-zen
  width 100%
  background-image linear-gradient(to bottom, #B1305C, #FC857D)
  position relative

  display flex

  .SVGInline.close-btn
    position absolute
    right 20px
    top 20px
    display flex
    justify-content center
    align-items center
    cursor pointer
    z-index 2

    @media $yandexZenBannerPhone
      right 15px
      top 15px

