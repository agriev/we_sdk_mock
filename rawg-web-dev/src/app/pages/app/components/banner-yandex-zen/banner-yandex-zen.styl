.banner-yandex-zen__main
  padding 24px 0 43px
  flex 0 0 auto

  position relative
  display flex
  flex-direction column
  justify-content flex-start
  border-radius 6px
  box-sizing border-box

  @media $bp.phone
    padding 24px 16px 43px

  @media $yandexZenBannerPhone
    flex 1 1 auto
    justify-content center
    padding 16px 32px
    text-align center

.banner-yandex-zen__main__title
  font-size 36px
  line-height 40px
  font-weight bold
  letter-spacing 0
  flex 0 0 auto

  @media $yandexZenBannerPhone
    font-size 18px
    line-height 24px
    letter-spacing 0

.banner-yandex-zen__main__title__inner
  font-size 36px
  line-height 40px
  font-weight normal
  letter-spacing 0

  @media $yandexZenBannerPhone
    font-size 18px
    line-height 24px
    letter-spacing 0

.banner-yandex-zen__main__steps
  flex 0 0 auto
  display flex

  margin-top 18px
  @media $yandexZenBannerPhone
    margin-top 8px
    justify-content center

.banner-yandex-zen__main__step
  display flex
  flex-direction column
  background-image none

  @media $yandexZenBannerPhone
    align-items center

  &:hover
    .SVGInline
      opacity .4

  & + &
    margin-left 22px
    padding-left 22px
    border-left 1px solid alpha(white, 20%)
    @media $yandexZenBannerPhone
      margin-left 13px
      padding-left 13px

.banner-yandex-zen__main__step__phone-icon
  height 30px
  @media $yandexZenBannerDesktop
    display none

.banner-yandex-zen__main__step__first
  display flex
  align-items center
  font-weight bold

  > .SVGInline
    margin-left 6px
    position relative
    top 2px
    transition opacity .3s
    @media $yandexZenBannerPhone
      display none

  @media $yandexZenBannerDesktop
    font-size 18px
    line-height 22px
    margin-bottom 1px
  @media $yandexZenBannerPhone
    font-size 16px
    line-height 22px

.banner-yandex-zen__main__step__second
  @media $yandexZenBannerDesktop
    font-size 13px
  @media $yandexZenBannerPhone
    font-size 12px

.banner-yandex-zen__main__links
  flex 0 0 auto
  display flex
  @media $yandexZenBannerPhone
    flex-direction column

.banner-yandex-zen__main__link
  $remove-link-style()
  flex 1 1 auto

  .arrow_right
    svg path
      fill black

  @media $yandexZenBannerDesktop
    margin-top 21px
    max-width 216px
    transition opacity .3s
    &:hover
      opacity .7

  @media $yandexZenBannerPhone
    margin 25px 0 0 5px
    width calc(100% - 10px)

  &:not(:first-child)
    @media $yandexZenBannerDesktop
      margin-left 20px
    @media $yandexZenBannerPhone
      margin-top 10px

.banner-yandex-zen__main__link button
  width 100%
  height 40px
  > div
    display flex
    justify-content space-between
    align-items center

  &.button_fill-inline g
    fill $color-black
