.showcase-most-watched-videos
  margin-bottom 43px

  @media $bp.phone
    margin-bottom 0
    padding 0 10px

  .showcase-title
    align-items baseline

    @media $bp.phone
      display flex
      margin-left 0
      padding-left 0
      text-align left

.showcase-most-watched-videos__youtube
  background url('~assets/icons/youtube-logo.svg?external') no-repeat center / cover
  display inline-block
  width 110px
  height 24px
  margin-left 18px

  @media $bp.phone
    background-position left top
    position relative
    top 2px
    overflow hidden
    width 30px
    height 20px
    margin-left 7px
