.activity__header
  @media $bp.desktop
    flex 1 1 auto
    margin 0
  @media $bp.phone
    text-align center

.activity__columns
  justify-content center
  @media $bp.desktop
    > div
      &:first-child
        width 550px
        margin-right 22px
      &:last-child
        width 304px
  @media $bp.phone
    padding 0 8px
    box-sizing border-box

// .activity__sidebar
//   margin-top 89px

.activity__tabs-wrap
  display flex
  align-items flex-end
  width 876px

  @media $bp.desktop
    margin 0 auto 32px

.activity__event
  padding 20px
  background-color orange

.activity__banner
  position relative
  z-index 0
  background-repeat no-repeat
  background-position  right -29px top -42px, center
  background-size  30% , 100%
  background-image url('~assets/icons/banner-bg.svg?external'), linear-gradient(to bottom, #fd867d, #b1305c)

  @media $bp.desktop
    margin-bottom 16px

  @media $bp.phone
    margin-bottom 16px
    margin-top 8px
    background-position  right -25px top -19px, center
    background-size  32% , 100%

.activity__banner__background-elements
  position absolute
  z-index -1
  right 0
  top 0
  height 100%
  width 153px
  border-radius 6px
  background-repeat no-repeat
  background-position right top
  background-image url('~assets/icons/feed-import-banner-bg.svg?external')

.activity__filter-loader
  display flex
  justify-content center
  & svg
    fill alpha($color-white, 0.1)

.activity__dev-radiobuttons
  margin 10px 0
  border 1px solid rgba(0,0,0,.2)
  border-radius 4px
  padding 10px
  background rgba(0,0,0,.2)
  display flex
  flex-direction column
  .activity__dev-radiobutton
    display block
    font-size 12px
    margin-bottom 3px
    display flex
    align-items center
    input
      margin 0 5px 0 0
