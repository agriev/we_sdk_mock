.welcome
  padding-bottom 0
  line-height 24px

  .page__content
    @media $bp.desktop
      max-width $page-width-desktop

  h2
    margin-bottom 30px
    text-align center

  h3
    margin-bottom 15px

  p
    margin 10px 0
    font-size 16px
  pre
    border-radius 5px

.welcome__content
  display flex
  flex-direction column
  justify-content space-between
  min-height 100%
  flex-grow 1

.welcome__block
  margin-bottom 120px
  text-align center

  @media $bp.phone
    margin-bottom 120px

    &:last-child
      margin-bottom 45px

.welcome__title-h1
  margin 0 0 15px

  @media $bp.phone
    margin-bottom 30px

.welcome__title-h2
  margin 0 0 40px

  @media $bp.phone
    padding 0 10px
    font-size 30px

.welcome__title-description
  font-size 24px
  line-height 34px

  @media $bp.phone
    padding 0 20px
    font-size 18px
    line-height 28px

.welcome__description
  margin-bottom 60px
  font-size 18px
  line-height 28px

  @media $bp.phone
    padding 0 20px

.welcome__slider
  position relative
  margin-bottom 48px

.welcome__slider-overlay
  position absolute
  top 0
  left 0
  right 0
  bottom 0

  width 100%
  height 100%

  cursor pointer

  @media $bp.phone
    display none

.welcome__block_header
  display flex
  flex-direction column
  justify-content center
  align-items center
  box-sizing border-box
  padding 95px 0 0
  margin-bottom 0

  @media $bp.phone
    margin-bottom 160px
    padding-top 60px

.welcome__image
  margin 0 auto
  background no-repeat center
  background-size contain