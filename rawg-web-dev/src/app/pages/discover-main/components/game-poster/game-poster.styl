.discover-main__game-poster
  position relative
  width 100%
  height 0
  padding-bottom 56.25%

  @media $bp.phone
    padding-bottom 80%

  background-size cover
  background-repeat no-repeat
  // box-shadow inset -5px -5px 10px 2px #151515

  .game-card-compact.game-card-compact_large
  .game-card-compact.game-card-compact_medium
    z-index 3
    position absolute
    bottom 40px
    right 40px
    width auto

    .game-card-compact__heading
      @media $bp.desktop
        font-size 36px
        font-weight normal
        line-height 48px

.discover-main__game-poster__background-1
  z-index 2
  pointer-events none
  background-image linear-gradient(to right, #151515, rgba(21, 21, 21, 0.6) 37%, rgba(21, 21, 21, 0) 100%);
  position absolute
  left -1px
  top -1px
  height calc(100% + 2px)
  width 21%

.discover-main__game-poster__background-2
  z-index 2
  pointer-events none
  background-image linear-gradient(to bottom, #151515, rgba(21, 21, 21, 0.7) 52%, rgba(21, 21, 21, 0) 100%);
  position absolute
  left -1px
  top -1px
  height 56%
  width calc(100% + 2px)

.discover-main__game-poster__background-3
  z-index 2
  pointer-events none
  background-image linear-gradient(to top, #151515, rgba(21, 21, 21, 0.7) 52%, rgba(21, 21, 21, 0) 100%);
  position absolute
  left -1px
  bottom -1px
  height 56%
  width calc(100% + 2px)

.discover-main__game-poster__background-4
  z-index 2
  pointer-events none
  background-image linear-gradient(to left, #151515, rgba(21, 21, 21, 0.6) 37%, rgba(21, 21, 21, 0) 100%);
  position absolute
  right -1px
  top -1px
  height calc(100% + 2px)
  width 21%

.discover-main__game-poster__video
  position absolute
  top 0
  left 0
  height 100%
  width 100%
  overflow hidden
  border-radius 12px

  > .game-card-video
    object-fit contain
    position absolute
    width 100%
    height 100%
    top 0
    left 0

    > .game-card-video__video
      height 100%
