.rate-landing-about
  display flex
  flex 0 1 auto
  width 798px
  box-sizing border-box
  margin 80px auto

  @media $bp.phone
    flex-direction column
    width 100%
    margin 56px auto
    padding 0 16px

.rate-landing-about__head
  @media $bp.desktop
    display flex
    flex 0 1 auto
    flex-direction column
    align-items flex-end
    margin-right 64px

.rate-landing-about__heading
  width 394px
  margin 0 0 32px

  img
    width 100%
    height auto

  @media $bp.phone
    width 198px
    margin 0 auto 16px

.rate-landing-about__heading-image
  width 100%

.rate-landing-about__description
  $font18-large()
  max-width 372px
  margin 0
  text-align right
  line-height 28px

  @media $bp.phone
    $font14-paragraph()
    max-width 300px
    margin 0 auto 16px
    text-align center

.rate-landing-about__rating-list
  margin 0

  @media $bp.desktop
    display grid
    grid-template-columns 96px auto
    grid-gap 26px

.rate-landing-about__rating-icon
  width 72px

  &_exceptional
    width 96px

  @media $bp.phone
    width 44px
    margin 0 auto

    &_exceptional
      width 56px
      padding-left 10px

  img
    width 100%
    height auto

.rate-landing-about__rating-info
  display flex
  flex 0 1 auto
  flex-direction column
  justify-content center
  margin 0

.rate-landing-about__rating-heading
  $font24-large-desktop()
  margin-bottom 4px
  font-weight bold

  @media $bp.phone
    margin-top -16px
    text-align center

.rate-landing-about__rating-text
  $font14-paragraph()

  @media $bp.phone
    max-width 220px
    margin 0 auto 16px
    text-align center
