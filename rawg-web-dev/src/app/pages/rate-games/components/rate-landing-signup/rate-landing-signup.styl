.rate-landing-signup
  margin-top 48px

  @media $bp.phone
    margin-top 16px

  &.signup-card
    .signup-card__wrapper
      background-color #3023ae
      background-image linear-gradient(129deg, #3023ae, #c86dd7)

    @media $bp.phone
      max-width none

  .input__field
    background-color rgba(black, 0.56)

.rate-landing-signup__head
  margin-top -113px
  margin-bottom 32px

  .locale-ru &
    margin-top -102px

  @media $bp.phone
    margin-top -58px
    margin-bottom 24px
    .locale-ru &
      margin-top -58px

.rate-landing-signup__heading.heading
  margin 0 0 24px

  @media $bp.phone
    margin 0 0 12px

.rate-landing-signup__large-heading
  width 512px

  @media $bp.phone
    width 100%
    max-width 256px

.rate-landing-signup__small-heading
  width 384px

  @media $bp.phone
    width 100%
    max-width 256px

.rate-landing-signup__subheading
  $font18-large()
  display block
  max-width 550px
  margin 0 auto
  line-height 28px
  text-align center

  @media $bp.phone
    $font14-paragraph()
    max-width 256px
