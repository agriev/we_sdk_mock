.profile-sharing
  display flex
  flex-direction column
  align-items center

.profile-sharing__separator
  margin 0 auto 60px
  width 250px
  height 1px
  background-color alpha($color-white, 0.1)

  @media $bp.phone
    margin-bottom 32px
    width 200px

.profile-sharing__info
  display flex

  @media $bp.phone
    flex-direction column
    text-align center

.profile-sharing__image
  margin-right 46px
  width 320px
  height 250px
  background url("./sharing.png") no-repeat center top / cover

  @media $bp.phone
    order 2
    margin-right 0
    margin-left 6px
    width 290px
    height 232px

.profile-sharing__text
  display flex
  flex-direction column
  justify-content center
  width 310px

  @media $bp.phone
    align-items center

.profile-sharing__title
  $heading3()
  margin-bottom 8px

  @media $bp.phone
    margin-bottom 16px

.profile-sharing__description
  $font14-small()
  margin-bottom 24px

  @media $bp.phone
    margin-bottom 16px

.profile-sharing__buttons
  display flex

  @media $bp.phone
    margin-bottom 32px

.profile-sharing__button
  $font16-medium()
  display flex
  justify-content center
  align-items center
  width 112px
  height 32px
  border-radius 4px
  cursor pointer
  transition opacity 0.3s

  &:first-child
    margin-right 10px

  &:hover
    opacity 0.8

.profile-sharing__button_vk
  background-color $vk-color

.profile-sharing__button_tw
  background-color $twitter-color
