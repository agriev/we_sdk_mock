.profile-favourite
  @media $bp.desktop
    margin-bottom 48px
  @media $bp.phone
    margin-bottom 0px

.profile-favourite__add-wrapper
  position fixed
  top 0
  right 0
  bottom 0
  left 0
  z-index 3

  overflow auto
  background-color $main-bg-color

.profile-favourite__add
  position relative
  margin 0 auto
  padding-top 100px
  padding-bottom 100px

  @media $bp.desktop
    width $page-width-desktop

  @media $bp.phone
    padding-top 60px
    padding-bottom 40px
    flex-grow 1

.profile-favourite__close-button
  position absolute
  right 0
  top 25px

  @media $bp.phone
    top 10px
    margin-right 10px

.profile-favourite__search-input
  margin 0 auto 40px

  @media $bp.phone
    max-width 90%

.profile-favourite__loading
  margin 0 auto
  text-align center

.profile-favourite__loading svg
  fill alpha($color-white, 0.5)

.profile-favourite__game-cards-list
  .slider-arrow
    top 96px
