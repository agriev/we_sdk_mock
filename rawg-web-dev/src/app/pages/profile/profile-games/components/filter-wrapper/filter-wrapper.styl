.profile-games__filter
  height 50px
  margin-bottom 32px
  position sticky
  top 0
  z-index 6

  .filter
    background #282828

.profile-games__filter-button
  margin-right 20px
  display inline-flex
  justify-content center
  align-items center
  width 100px
  height 30px
  font-size 14px
  color alpha($color-white, 0.5)
  cursor pointer
  border 1px solid alpha($color-white, 0.4)
  border-radius 4px
  transition all 0.3s

  &:hover
    color $color-white
    border-color $color-white
