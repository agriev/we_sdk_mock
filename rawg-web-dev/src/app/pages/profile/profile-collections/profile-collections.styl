.profile-collections
  display flex
  flex-direction column
  align-items center

.profile-collections__tabs
  display flex
  justify-content flex-start
  margin-bottom 24px
  align-items baseline

  @media $bp.phone
    justify-content center

.profile-collections__tabs-inner
  flex 1 1 auto
  justify-content flex-start

  > ul
    justify-content flex-start

.profile-collections__empty_smile
  margin-top 56px
  margin-bottom 5px
  background url('./smile_2x.png') no-repeat center / contain
  width 145px
  height 145px

.profile-collections__empty_link
  margin-top 36px

.profile-collections__tabs__new_collection_link
  border-bottom none
  font-size 12px
  color $color-white
  transition opacity .3s

  &:hover
    opacity 0.7

  @media $bp.phone
    margin-right 10px

  &.non-visible
    display none

    @media $bp.phone
      display none
