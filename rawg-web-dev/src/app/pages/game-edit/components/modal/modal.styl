.game-edit__modal
  z-index 15
  position fixed
  top 0
  left 0
  display flex
  flex-direction column
  align-items center
  width 100vw
  height 100%
  background #151515
  will-change:transform

  @media $bp.desktop
    overflow-y auto

.game-edit__modal-content
  display flex
  flex-direction column
  justify-content flex-start
  width 100%
  max-width $page-width-desktop
  box-sizing border-box
  padding 32px 40px 0
  background alpha(white, 6%)
  border-top-left-radius 6px
  border-top-right-radius 6px
  -webkit-overflow-scrolling touch

  > *
    flex 0 0 auto

  @media $bp.desktop
    flex 0 0 auto

  @media $bp.phone
    margin-bottom 72px
    padding 16px 24px
    flex 1 1 auto
    overflow auto

.game-edit__modal__close-button__container
  max-width $page-width-desktop
  width 100%
  box-sizing border-box
  display flex
  justify-content flex-end
  margin-top 32px
  margin-bottom 24px
  flex 0 0 auto

  @media $bp.phone
    padding-right 12px
    margin-top 16px
    margin-bottom 16px

.game-edit__modal__close-button
  @media $bp.phone
    width 36px
    height 36px

    svg
      width 15px
      height 15px

.game-edit__modal__title
  font-size 44px
  line-height 52px
  margin-bottom 24px

  @media $bp.phone
    font-size 20px
    line-height inherit
    margin-bottom 12px

  .game-edit__modal__title1
    color #f1951c
    display inline

  .game-edit__modal__title2
    display inline

.game-edit__modal__desc
  margin-bottom 16px
  @media $bp.phone
    font-size 14px
    line-height 20px
    margin-bottom 16px

.game-edit__modal__btns
  display flex
  justify-content flex-end
  background #232323
  flex 0 0 auto

  border-bottom-left-radius 6px
  border-bottom-right-radius 6px

  box-sizing border-box
  width 100%
  max-width $page-width-desktop
  padding 32px 40px 40px

  @media $bp.desktop
    margin-bottom 20px

  @media $bp.phone
    position fixed
    bottom 0
    padding 15px 24px

.game-edit__modal__save-btn
  font-size 16px
  padding 14px 82px
  background white
  cursor pointer
  color black
  border-radius 4px

  transition background-color .3s, color .3s

  @media $bp.desktop
    &:hover
      background-color alpha(white, 60%)

.game-edit__modal__cancel-btn
  font-size 16px
  padding 14px 82px
  cursor pointer
  background-color alpha(white, 10%)
  color white
  border-radius 4px

  @media $bp.desktop
    margin-left 20px
    &:hover
      background-color alpha(white, 100%)
      color black

  @media $bp.phone
    margin-left 12px

  transition background-color .3s, color .3s

.game-edit__modal__save-btn
.game-edit__modal__cancel-btn
  @media $bp.phone
    text-align center
    padding 12px 10px
    width calc(50% - 6px)
