.game-edit__select-items__modal__select
  display flex
  flex 1 1 auto
  position relative

.game-edit__select-items__modal__select__available-items
  position absolute
  top 100%
  left 0
  width 100%
  padding 0 20px
  box-sizing border-box

  border-top 1px solid alpha(white, 20%)

  background black
  max-height 300px
  overflow-y auto
  z-index 5

  border-bottom-left-radius 4px
  border-bottom-right-radius 4px

.game-edit__select-items__modal__select__available-item,
.game-edit__select-items__modal__select__new-item
  font-size 14px
  padding 12px 0
  cursor pointer
  transition color .3s
  color alpha(white, 40%)

  &:hover
  &_selected
    color white

  &:hover
  &_disabled
    color alpha(white, 30%)
    cursor default

  &:not(:first-child)
    border-top 1px solid alpha(white, 10%)

.game-edit__select-items__modal__select__new-item
  margin 0 -20px
  padding 14px 20px
  color white
  background-color alpha(white, 10%)

  &:hover,
  &_selected
    color alpha(white, 40%)

.game-edit__select-items__modal__select__available-items__loading
  padding 20px 0
  display flex
  justify-content center
  svg path
    fill white

.game-edit__select-items__modal__select
    position relative

    &::before
      content ''
      width 12px
      height 12px
      background url('~assets/icons/arrow-dropdown.svg?external') no-repeat center / contain
      position absolute
      right 20px
      top 19px
      opacity .5
      transition opacity .3s
      cursor pointer

    &.game-edit__select-items__modal__select_with-suggests
      &::before
        opacity 1

    input
      padding 15px 20px
      font-size 18px
      background alpha(black, 40%)
      border-radius 4px
      box-sizing border-box
      border none
      color white
      width 100%

.game-edit__select-items__modal__select__create
  $add-link-style()
