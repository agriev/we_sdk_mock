.game-edit__cover-image
  display flex
  flex-wrap wrap
  align-items center

  padding 25px 20px
  background alpha(black, 40%)
  border-radius 4px

  @media $bp.phone
    padding 20px 15px

  &.game-edit__cover-image__readonly
    background alpha(black, 20%)

.game-edit__cover-image__add-btn
  margin-right 12px

  + .game-edit__cover-image__empty-text
    margin-left 24px

  @media $bp.desktop
    .game-edit__cover-image__add-btn__wrapper:hover &:not(.game-edit__add-btn_readonly)
      background-color alpha(white, 100%)
      color black
      svg path
        fill black
        fill-opacity 1

  svg
    transition fill .3s, fill-opacity .3s
    .game-edit__cover-image__readonly & path
      fill-opacity 0.2

.game-edit__cover-image__empty-text
  font-size 18px
  line-height 30px
  color alpha(white, 40%)
  display flex
  align-items center

  @media $bp.phone
    margin-top 12px

.game-edit__cover-image__empty-text-emoji
  font-size 30px
  margin-right 12px
  color white
  img
    width 40px
    height 40px

.game-edit__cover-image__add-btn__wrapper
  position relative

.game-edit__cover-image__file-input
  position absolute
  top 0
  left 0
  width 100%
  height 100%
  z-index 1
  opacity 0
  cursor pointer

.game-edit__cover-image__preview
  width 56px
  height 56px
  border-radius 6px
  margin-right 20px
  background-size cover
  background-repeat no-repeat
  background-position center

  .game-edit__cover-image__readonly &
    opacity 0.5
