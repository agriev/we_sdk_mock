.game-edit__input
  input
    padding 16px 20px
    font-size 18px
    background alpha(black, 0.4)
    border none
    border-radius 4px
    width 100%
    box-sizing border-box
    color white

    &[readonly]
      opacity 0.5
      cursor not-allowed
      color alpha(white, 35%)

  &_changed
    box-shadow 0px 0px 0px 2px rgba(19, 201, 72, 0.5);
