.game-edit__fields-group
  position static
  & + &
    margin-top 24px
    padding-top 20px
    border-top 1px solid alpha(white, 10%)

.game-edit__fields-group-content
  display flex
  margin-left -24px
  margin-top -24px

  &.game-edit__fields-group-content_few-fields
    @media $bp.desktop
      .game-edit__field
        &:not(:first-child)
          margin-left 12px

    @media $bp.phone
      flex-wrap wrap
      .game-edit__field
        width auto

  .game-edit__field
    margin-top 24px
    margin-left 24px

.game-edit__fields-group-error
  margin-top 16px
  display flex

.game-edit__fields-group-tip
  display flex
  margin-top 20px
  margin-bottom 20px
  font-size 14px
  line-height 20px

  .SVGInline
    margin-right 8px
    position relative
    top 2px
    svg
      width 18px
      height 18px
