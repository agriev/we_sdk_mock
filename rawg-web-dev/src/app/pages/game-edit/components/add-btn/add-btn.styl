.game-edit__add-btn-container
  display inline-block

.game-edit__add-btn
  background-color alpha(white, 10%)
  border-radius 24.5px
  font-size 16px
  padding 14.5px 21px
  cursor pointer
  display flex
  align-items center
  color alpha(white, 40%)

  @media $bp.phone
    font-size 13px
    padding 12px 16px

  transition background-color .3s, color .3s

  &.game-edit__add-btn_readonly
    cursor not-allowed
    background-color alpha(white, 5%)
    color alpha(white, 20%)

  &:not(.game-edit__add-btn_readonly):hover
    background-color alpha(white, 100%)
    color black
    svg path
      fill black
      fill-opacity 1

  svg
    transition fill .3s, fill-opacity .3s
    width 16px
    height 16px
    margin-right 8px
    position relative
    top 2px

    .game-edit__add-btn_readonly &
      fill-opacity 0.2
