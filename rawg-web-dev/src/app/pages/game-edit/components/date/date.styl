.game-edit__date
  position relative

.game-edit__date__value
  background alpha(white, 10%)
  border-radius 24.5px
  font-size 16px
  color white
  padding 15px 20px
  cursor pointer
  max-width 260px
  min-width 260px
  display flex
  align-items center
  box-sizing border-box

.game-edit__date__value-icon
  margin-right 8px

.game-edit__date__form
  opacity 0
  pointer-events none
  transition opacity .3s
  padding 20px 24px
  background white
  border-radius 6px
  top -30px
  position absolute
  box-sizing border-box
  z-index 3

  @media $bp.phone
    position fixed
    right 10px
    bottom 10px
    top unset
    width calc(100vw - 20px)

  &.game-edit__date__form_opened
    opacity 1
    pointer-events auto

.game-edit__date__form-overlay
  @media $bp.desktop
    display none

  position fixed
  left 0
  top 0
  width 100vw
  height 100vh
  background alpha(black, 0%)
  z-index 2
  pointer-events none

  &.game-edit__date__form-overlay_opened
    background alpha(black, 70%)
    pointer-events auto

.game-edit__date__form__header
  display flex

.game-edit__date__form__header-title
  flex 1 1 auto
  font-size 16px
  color alpha(black, 50%)

.game-edit__date__form__header-save
  flex 0 0 auto
  margin-left 10px
  text-decoration underline
  color alpha(black, 50%)
  cursor default

  opacity .5
  transition opacity .3s
  &.game-edit__date__form__header-save_enabled
    cursor pointer
    opacity 1

.game-edit__date__form__selects
  margin-top 12px
  display flex

  @media $bp.phone
    flex-direction column

  select
    padding 8px 12px
    color #262626
    border-radius 4px
    border 1px solid rgba(0, 0, 0, 0.5)
    background white

    @media $bp.desktop
      font-size 16px
      &:nth-child(1)
        width 80px

      &:nth-child(2)
        width 160px

      &:nth-child(3)
        width 88px

    @media $bp.phone
      font-size 14px
      width 100%

  select + select
    @media $bp.desktop
      margin-left 12px

    @media $bp.phone
      margin-top 6px

.game-edit__date__form__tba-btn
  margin-top 16px
  padding 9px 21px
  background-color white
  font-size 16px
  color #262626
  border-width 1px
  border-style solid
  border-color rgba(0, 0, 0, 0.1)
  display inline-block
  cursor pointer
  border-radius 4px
  transition border-color .3s
  &:hover
    border-color rgba(0, 0, 0, 0.3)
