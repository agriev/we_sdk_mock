.collection-icon
  position relative

  width 20px
  height 12px
  border 1px solid $color-white
  box-sizing border-box
  border-radius 2px

  &:before
  &:after
    position absolute
    display block
    border 1px solid $color-white
    box-sizing border-box
    border-radius 1px
    border-bottom none
    content ''

  &:before
    top -3px
    left 1px
    width 16px
    height 3px

  &:after
    top -5px
    left 3px
    width 12px
    height 3px
