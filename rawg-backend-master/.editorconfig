# http://editorconfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
indent_style = space
indent_size = 4
insert_final_newline = true
max_line_length = 119
trim_trailing_whitespace = true

[*.json]
insert_final_newline = false
indent_size = 2

[*.yml]
indent_size = 2

[*.md]
trim_trailing_whitespace = false
